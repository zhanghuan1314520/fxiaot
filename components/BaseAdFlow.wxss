.mar-top-12 {
    margin-top: 12rpx;
}

.mar-top-8 {
    margin-top: 8rpx;
}

.mar-left-10 {
    margin-left: 10rpx;
}

.mar-top-30 {
    margin-top: 30rpx;
}

.advert {
    font-size: 18rpx;
    line-height: 26rpx;
    text-align: center;
    background: rgba(0,0,0,.3);
    width: 50rpx;
    height: 26rpx;
    position: absolute;
    right: 12rpx;
    bottom: 12rpx;
    z-index: 222;
    border-radius: 1rpx;
    opacity: .4;
}

.line {
    display: inline-block;
    width: 2rpx;
    height: 20rpx;
    margin: 0 10rpx;
    background: #bfbfbf;
}

.project__left {
    position: relative;
    float: left;
}

.project__headIcon,.project__left {
    width: 216rpx;
    height: 180rpx;
    border-radius: 8rpx;
}

.project__headIcon {
    background: #c5c3c3;
}

.project__info__price {
    display: block;
    font-size: 32rpx;
    font-weight: 700;
    color: #f03c50;
    line-height: 40rpx;
    margin-top: 4rpx;
}

.project__info__price:nth-child(1) {
    margin-top: 0;
}

.project__info__top {
    display: flex;
    justify-content: space-between;
}

.card__info__name {
    font-size: 34rpx;
    line-height: 44rpx;
    color: #2e3135;
    font-weight: 700;
    margin-top: 0rpx;
}

.info__tips__item {
    display: inline-block;
    margin-left: 12rpx;
    padding: 0rpx 8rpx;
    height: 32rpx;
    line-height: 32rpx;
    border-radius: 4rpx;
    font-size: 24rpx;
    font-weight: 400;
}

.info__tips__item,.info__tips__item--zs {
    background: rgba(45,140,240,.12);
    color: #2d8cf0;
}

.info__tips__item--jjys {
    background: rgba(10,180,100,.12);
    color: #0ab464;
}

.info__tips__item--zxyh {
    background: rgba(45,140,240,.12);
    color: #2d8cf0;
}

.info__tips__item--zzgs {
    background: rgba(250,120,50,.12);
    color: #fa7832;
}

.info__tips__item--yqp {
    background: rgba(240,60,80,.12);
    color: #f03c50;
}

.info__tips__item--fhmd {
    background: rgba(250,120,50,.12);
    color: #fa7832;
}

.info__tips__item:nth-child(1) {
    margin-left: 0;
}

.project__info__location {
    font-weight: 400;
    color: rgba(0,0,0,.65);
    font-size: 24rpx;
    line-height: 32rpx;
    max-width: 400rpx;
}

.project__info__bottom--ad {
    font-size: 22rpx;
    overflow: hidden;
    height: 32rpx;
    flex: none;
}

.project__info__spot {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
}

.project__info__spot .light__icon {
    width: 32rpx;
    height: 32rpx;
}

.project__info__spot .light__title {
    font-size: 24rpx;
    color: rgba(0,0,0,.85);
}

.project__info__spot .light__spot {
    font-size: 24rpx;
    color: rgba(0,0,0,.6);
    width: 280rpx;
}

.project__info__spot:nth-child(1) {
    margin-top: 22rpx;
}

.project__info__spot--sm {
    margin-top: 16rpx;
}

.project__info__spot .light__icon,.project__info__spot .light__spot,.project__info__spot .light__title,.project__info__spot .line {
    vertical-align: middle;
}

.feature__tips__item {
    height: 32rpx;
    line-height: 32rpx;
    padding: 0 8rpx;
    background: #eceff5;
    border-radius: 4rpx;
    color: #828caa;
    margin-left: 12rpx;
    font-size: 22rpx;
    display: inline-block;
}

.feature__tips__item:nth-child(1) {
    margin-left: 0;
}

.ad__banner__img {
    width: 220rpx;
    height: 180rpx;
}

.ad3,.ad__right {
    position: relative;
}

.ad__right {
    margin-left: 28rpx;
    flex: 1;
}

.ad {
    width: 100%;
}

.ad__banner {
    display: flex;
    justify-content: space-between;
}

.ad__banner__item {
    position: relative;
    height: 180rpx;
}

.ad__banner__img--st1 {
    border-radius: 8rpx 0 0 8rpx;
}

.ad__banner__img--st2 {
    border-radius: 0 8rpx 8rpx 0;
}

.ad__banner__img--big {
    width: 686rpx;
    border-radius: 8rpx;
}

.ad__cont {
    margin-top: 28rpx;
}

.ad2 {
    display: flex;
}

.ad__right__item {
    display: flex;
    justify-content: center;
    align-items: center;
}

.ad__right__title--main {
    text-align: center;
    color: rgba(0,0,0,.85);
    font-size: 34rpx;
    font-weight: 700;
    height: 40rpx;
    line-height: 40rpx;
    overflow: hidden;
}

.ad__right__title--top {
    color: rgba(0,0,0,.65);
    font-size: 24rpx;
    height: 28rpx;
    line-height: 28rpx;
}

.heng {
    background: rgba(0,0,0,.55);
    width: 48rpx;
    height: 2rpx;
    margin: 0 12rpx;
}

.ad__right__tips {
    padding: 0 28rpx;
    height: 52rpx;
    line-height: 52rpx;
    background: rgba(0,0,0,.07);
    border-radius: 4rpx;
    color: rgba(0,0,0,.45);
    font-size: 24rpx;
}