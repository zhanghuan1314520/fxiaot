.init__banner-block {
    background: #fff;
    overflow: hidden;
}

.init__banner-block,.init__banner-block .swiper {
    height: 280rpx;
    border-radius: 8rpx;
}

.init__banner-block .swiperItem {
    position: relative;
    border-radius: 8rpx;
}

.init__banner-block .top-banner-image {
    height: 100%;
    border-radius: 8rpx;
}

.slide-image {
    width: 100%;
    max-width: 100%;
    height: 280rpx;
    border-radius: 8rpx;
}

.advert {
    font-size: 18rpx;
    line-height: 26rpx;
    text-align: center;
    background: rgba(0,0,0,.3);
    width: 50rpx;
    height: 26rpx;
    position: absolute;
    right: 12rpx;
    bottom: 12rpx;
    z-index: 222;
    border-radius: 1rpx;
    opacity: .4;
}