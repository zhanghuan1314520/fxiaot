.price-filter {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background: #fff;
}

.price-filter .price-filter__container {
    display: flex;
    flex: 1;
    box-sizing: border-box;
    overflow: scroll;
}

.price-filter .price-filter__left {
    width: 150rpx;
    height: 100%;
    box-sizing: border-box;
    overflow-y: scroll;
}

.price-filter .price-filter__right {
    flex: 1;
    height: 608rpx;
    background: #fafafa;
    overflow: hidden;
}

.price-filter .price-filter__right .price__right__first,.price-filter .price-filter__right .price__right__second {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    overflow-y: scroll;
}

.price-filter .price-filter__footer {
    height: 144rpx;
}