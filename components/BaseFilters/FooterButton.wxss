.footer-button {
    position: relative;
    z-index: 100;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 22rpx 32rpx;
    min-height: 144rpx;
    background: #fff;
    box-shadow: 0rpx -4rpx 12rpx 0rpx rgba(21,24,45,.03);
    box-sizing: border-box;
}

.footer-button .area-filter-item {
    display: flex;
    align-items: center;
    width: 100%;
    margin-bottom: 28rpx;
}

.footer-button .area-filter-item .item-button {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 12rpx 16rpx;
    background: #eceff5;
    border-radius: 8rpx;
    margin-right: 32rpx;
}

.footer-button .area-filter-item .text {
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: rgba(0,0,0,.85);
    margin-right: 18rpx;
}

.footer-button .area-filter-item .iconnew {
    font-size: 24rpx;
    color: #828caa;
}

.footer-button .footer-button__reset {
    width: 168rpx;
    border: 1rpx solid rgba(0,0,0,.25);
    color: rgba(0,0,0,.65);
    background: #fff;
    border-radius: 8rpx;
}

.footer-button .footer-button__reset,.footer-button .footer-button__submit {
    height: 100rpx;
    font-size: 32rpx;
    font-weight: 700;
    line-height: 100rpx;
    text-align: center;
    box-sizing: border-box;
}

.footer-button .footer-button__submit {
    width: 496rpx;
    background: #2d8cf0;
    color: #fff;
    border-radius: 8rpx;
}