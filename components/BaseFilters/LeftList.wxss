.left-list {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.left-list .left-list__item {
    border-bottom: 2rpx solid #f2f2f2;
    padding: 26rpx 42rpx 26rpx 34rpx;
    line-height: 36rpx;
    color: #000;
    font-size: 28rpx;
}

.left-list .left-list__item.left-list__item-active {
    color: #2d8cf0;
    font-weight: 700;
    background: #fafafa;
}

.left-list .left-list__item:last-child {
    border-bottom: none;
}