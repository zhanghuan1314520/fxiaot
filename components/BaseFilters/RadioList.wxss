.radio-list {
    width: 100%;
    height: 100%;
}

.radio-list .radio-list__item {
    padding: 26rpx 48rpx;
    line-height: 36rpx;
    height: 36rpx;
    box-sizing: content-box;
    color: rgba(0,0,0,.85);
    font-size: 28rpx;
}

.radio-list .radio-list__item.radio-list__item-active {
    color: #2d8cf0;
    font-weight: 700;
    background: #fff;
}