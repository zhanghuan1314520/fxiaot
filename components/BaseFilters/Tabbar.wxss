.tabbar {
    display: flex;
    width: 100%;
    height: 88rpx;
    box-sizing: border-box;
    padding: 0 12rpx;
    background: #fff;
    border-bottom: 1rpx solid rgba(0,0,0,.07);
    overflow: hidden;
}

.tabbar .tabbar__item {
    display: flex;
    justify-content: center;
    align-items: center;
    flex: 1;
}

.tabbar .tabbar__item .tabbar__item-text {
    color: rgba(0,0,0,.85);
    margin-right: 12rpx;
}

.tabbar .tabbar__item .tabbar__item-icon {
    color: #d9d9d9;
    font-size: 20rpx;
}

.tabbar .tabbar__item.tabbar__item-active .tabbar__item-text {
    color: #0d78f7;
}

.tabbar .tabbar__item.tabbar__item-active .tabbar__item-icon {
    color: #0d78f7;
    transform: rotate(180deg);
}