.comfirm-dialog {
    height: 100%;
    width: 100%;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(0,0,0,.65);
    z-index: 1005;
}

.comfirm-dialog .comfirm-dialog-content {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    width: auto;
    height: auto;
    overflow: hidden;
    background: #fff;
    padding-bottom: env(safe-area-inset-bottom);
}

.comfirm-dialog .comfirm-dialog-content .content-wrap {
    width: auto;
    background: #fff;
    border-radius: 8rpx;
    height: auto;
    overflow: hidden;
}

.comfirm-dialog .comfirm-dialog-content .content-wrap .tips {
    text-align: center;
    margin: 94rpx 18rpx 80rpx;
    width: auto;
    height: auto;
    overflow: hidden;
    font-size: 30rpx;
    font-weight: 700;
    color: #303237;
    line-height: 50rpx;
}

.comfirm-dialog .comfirm-dialog-content .content-status {
    height: auto;
    overflow: hidden;
    width: auto;
    margin: 0 24rpx;
}

.comfirm-dialog .comfirm-dialog-content .content-status .status-text {
    width: auto;
    height: 50rpx;
    font-size: 36rpx;
    font-weight: 700;
    color: #303237;
    line-height: 50rpx;
    margin-top: 44rpx;
    margin-bottom: 4rpx;
}

.comfirm-dialog .comfirm-dialog-content .content-status .status-subtext {
    width: auto;
    height: 42rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 42rpx;
    margin-bottom: 32rpx;
}

.comfirm-dialog .comfirm-dialog-content .content-item {
    width: auto;
    font-size: 30rpx;
    font-weight: 400;
    color: #303237;
    border-top: 1px solid rgba(48,55,64,.05);
    margin: 0 24rpx;
    padding: 30rpx 0;
}

.comfirm-dialog .comfirm-dialog-content .content-item .text {
    width: auto;
    font-size: 26rpx;
    font-weight: 300;
    color: #96989e;
    margin-left: 16rpx;
}

.comfirm-dialog .tool-btns {
    margin-top: 44rpx;
    height: 102rpx;
    width: auto;
    border-top: 1px solid rgba(0,0,0,.1);
    line-height: 102rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    flex: 1;
    font-size: 32rpx;
    font-weight: 500;
}

.comfirm-dialog .tool-btns .btn-cancle {
    flex: 1;
    font-size: 32rpx;
    font-weight: 700;
    color: #606266;
    text-align: center;
}

.comfirm-dialog .tool-btns .btn-ok {
    flex: 1;
    font-size: 32rpx;
    font-weight: 700;
    color: #2f8cef;
    border-left: 1px solid rgba(0,0,0,.1);
    text-align: center;
}