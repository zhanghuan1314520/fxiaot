.position {
    position: absolute;
    right: 0;
    bottom: 0;
    z-index: 100;
}

.sales_man_wrap {
    display: flex;
    justify-content: flex-start;
}

.sales_man_list {
    width: 218rpx;
    height: 316rpx;
    background: url(https://imgcdn.huanjutang.com/assets/img/20200318/5e71bc2b618a2.png);
    background-size: cover;
    text-align: center;
    padding-top: 36rpx;
    position: relative;
    padding-bottom: 6rpx;
    margin-right: 20rpx;
    box-sizing: border-box;
}

.sales_man_list:last-child {
    margin: 0;
}

.sales_man_list .avatar {
    z-index: 2;
    width: 100rpx;
    height: 100rpx;
    box-sizing: border-box;
    overflow: hidden;
    margin: 0rpx auto 14rpx;
    position: relative;
}

.sales_man_list .area {
    position: absolute;
    top: 12rpx;
    left: 0rpx;
    color: #af8533;
    font-size: 22rpx;
    background: linear-gradient(180deg,rgba(255,228,176,0),#ffe4b0);
    border-radius: 0rpx 4rpx 4rpx 0;
    height: 32rpx;
    line-height: 32rpx;
    padding: 0 8rpx;
}

.icon-kings {
    position: absolute;
    width: 38rpx;
    height: 38rpx;
    right: 44rpx;
    top: 18rpx;
}

.icon-kings .image {
    width: 100%;
    height: 100%;
}

.sales_man_list .avatar .image.gray-bg {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
}

.sales_man_list .info {
    position: relative;
    z-index: 2;
    width: auto;
    height: auto;
    overflow: hidden;
    margin-top: 4rpx;
}

.sales_man_list .info .name {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 32rpx;
    font-weight: 700;
    margin: 0 10rpx;
}

.sales_man_list .info .name,.sales_man_list .info .project-name {
    width: auto;
    color: #89631b;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.sales_man_list .info .project-name {
    margin: 10rpx 10rpx 0;
    height: 32rpx;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 32rpx;
}

.btn-contact {
    width: 148rpx;
    height: 56rpx;
    background: linear-gradient(180deg,#fffcf6,#fff9ee);
    box-shadow: 0 2rpx 20rpx 0 rgba(253,225,172,.4);
    border-radius: 28rpx;
    text-align: center;
    font-size: 26rpx;
    line-height: 36rpx;
    font-weight: 700;
    color: #b98727;
    margin: 10rpx auto 0;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn-contact .image {
    height: 26rpx;
    width: 26rpx;
    vertical-align: middle;
    margin-right: 8rpx;
}