.container,.soil-item {
    background: #fff;
}

.soil-item {
    box-sizing: border-box;
    height: auto;
    overflow: hidden;
    margin: 0 32rpx;
    padding-bottom: 40rpx;
    width: auto;
    border-bottom: 1px solid rgba(0,0,0,.07);
}

.soil-item .item-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40rpx;
}

.soil-item .item-top .location {
    flex: 1;
    width: auto;
    height: 44rpx;
    height: auto;
    overflow: hidden;
    font-size: 34rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 44rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.soil-item .item-top .house-type {
    width: auto;
    display: inline-flex;
    padding: 0 8rpx;
    text-align: center;
    height: 36rpx;
    justify-content: center;
    align-items: center;
    border-radius: 4rpx;
    margin-left: 12rpx;
    font-size: 24rpx;
}

.soil-item .item-top .green-bg {
    background: rgba(45,140,240,.12)!important;
    color: #2d8cf0!important;
}

.soil-item .item-top .blue-bg {
    color: #0ab464!important;
    background: rgba(10,180,100,.12)!important;
}

.soil-item .item-top .gray-bg {
    background: rgba(150,152,158,.2);
}

.soil-item .price {
    width: auto;
    height: 40rpx;
    font-size: 34rpx;
    font-weight: 700;
    color: #f03c50;
    line-height: 40rpx;
    margin: 16rpx 0;
}

.soil-item .address {
    margin-bottom: 16rpx;
    height: 32rpx;
    line-height: 32rpx;
    font-size: 24rpx;
    display: flex;
    width: auto;
}

.soil-item .address .name {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: rgba(0,0,0,.85);
    width: 400rpx;
}

.soil-item .address .date {
    width: 200rpx;
    font-weight: 400;
    text-align: right;
    color: rgba(0,0,0,.25);
}

.soil-item .price-cont {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 60rpx;
    background: #fafafa;
    border-radius: 4px;
}

.soil-item .price-cont .price-item {
    flex: 1;
    font-size: 24rpx;
    font-weight: 400;
    text-align: center;
    color: rgba(0,0,0,.65);
    height: 32rpx;
    line-height: 32rpx;
    border-right: 1px solid rgba(0,0,0,.1);
}

.soil-item .price-cont .price-item:last-child {
    border-right: 0;
}