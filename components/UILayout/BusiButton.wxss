.busi-button {
    width: 100%;
    height: 100rpx;
    color: #fff;
    text-align: center;
    border-radius: 8rpx;
    font-size: 32rpx;
    line-height: 100rpx;
    font-weight: 700;
    overflow: hidden;
}

.busi-button__primary {
    background: #2d8cf0;
}

.busi-button__success {
    background: #1bc17b;
}

.busi-button__warning {
    background: linear-gradient(53deg,#ff8e5c,#ff5431);
}

.busi-button__diabled {
    background: #d9d9d9;
}