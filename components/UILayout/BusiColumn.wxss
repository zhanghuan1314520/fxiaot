.busi-column .busi-column__nav {
    width: 100%;
    height: 48rpx;
    padding: 0 32rpx;
    white-space: nowrap;
    box-sizing: border-box;
    overflow: hidden;
}

.busi-column .busi-column__nav__item {
    position: relative;
    display: inline-block;
    margin-right: 48rpx;
}

.busi-column .busi-column__nav__item .busi-column__nav__item-text {
    position: relative;
    font-size: 32rpx;
    font-weight: 400;
    line-height: 48rpx;
    color: rgba(0,0,0,.85);
    z-index: 2;
    transition: all .2s;
}

.busi-column .busi-column__nav__item--active .busi-column__nav__item-text {
    font-size: 36rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
}

.busi-column .busi-column__nav__item--active.skeletons-rect::after {
    display: none;
}

.busi-column .busi-column__nav__item--active:after {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1;
    content: "";
    width: 124rpx;
    height: 16rpx;
    background: linear-gradient(270deg,rgba(89,192,249,0),rgba(45,140,240,.8));
    border-radius: 8rpx;
}

.busi-column .busi-column__container {
    display: -webkit-box;
    padding: 26rpx 32rpx 48rpx;
    height: 240rpx;
    overflow-y: hidden;
    overflow-x: scroll;
    -webkit-overflow-scrolling: touch;
}

.busi-column .busi-column__list__item {
    position: relative;
    width: 280rpx;
    height: 240rpx;
    margin-right: 16rpx;
    border-radius: 7rpx;
    box-shadow: 0 10rpx 18rpx 0 rgba(0,0,0,.16);
    overflow: hidden;
}

.busi-column .busi-column__item-img {
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
}

.busi-column .busi-column__item-shadown {
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 2;
    width: 280rpx;
    height: 188rpx;
    padding: 0 24rpx 24rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    overflow: hidden;
    background: linear-gradient(180deg,transparent,rgba(0,0,0,.9));
    box-shadow: 0 10rpx 18rpx 0 rgba(0,0,0,.16);
}

.busi-column .busi-column__item__title {
    line-height: 40rpx;
    padding-bottom: 4rpx;
    font-weight: 700;
}

.busi-column .busi-column__item__desc,.busi-column .busi-column__item__title {
    display: inline-block;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    width: 232rpx;
    text-shadow: 0 10rpx 18rpx rgba(0,0,0,.16);
}

.busi-column .busi-column__item__desc {
    line-height: 32rpx;
    height: 32rpx;
    color: hsla(0,0%,100%,.85);
}

.busi-column .busi-column__item-label {
    position: absolute;
    z-index: 3;
    top: 20rpx;
    left: 24rpx;
    width: 60rpx;
    height: 32rpx;
    background: #2d8cf0;
    box-shadow: 0 10rpx 18rpx 0 rgba(0,0,0,.16);
    border-radius: 4rpx;
    text-align: center;
    font-size: 22rpx;
    line-height: 32rpx;
}

.busi-column .busi-column__item-label.green {
    background: #0ab464;
}

.busi-column .busi-column__list__more .view {
    display: block;
    float: left;
    width: 26rpx;
    height: 192rpx;
    background: #f5f5f5;
    color: rgba(0,0,0,.45);
    padding: 48rpx 17rpx 0;
    margin-right: 32rpx;
    border-radius: 4rpx;
    font-size: 26rpx;
    line-height: 36rpx;
}