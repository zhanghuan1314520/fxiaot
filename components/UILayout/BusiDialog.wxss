.busi-dialog {
    position: fixed;
    top: 0;
    left: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100vw;
    height: 100vh;
    z-index: 999;
    overflow: hidden;
}

.busi-dialog .busi-dialog__bg {
    background: rgba(0,0,0,.65);
}

.busi-dialog__show .busi-dialog__container {
    opacity: 1;
    transform: scale(1);
}

.busi-dialog__container {
    width: 560rpx;
    position: relative;
    background: #fff;
    border-radius: 8rpx;
    overflow: hidden;
    z-index: 2;
    transition: all .3s cubic-bezier(.7,.3,.1,1);
    opacity: 0;
    transform: scale(.2);
}

.dialog__close {
    position: absolute;
    top: 24rpx;
    right: 24rpx;
    z-index: 3;
    display: block;
    width: 26rpx;
    height: 26rpx;
    overflow: hidden;
}

.dialog__image {
    position: relative;
    width: 100%;
    overflow: hidden;
    z-index: 1;
}

.dialog__image .dialog__image-picture {
    display: block;
    width: 100%;
    overflow: hidden;
}

.dialog__image .dialog__image-icon {
    display: block;
    margin: 60rpx auto 0;
    width: 100rpx;
    height: 100rpx;
    overflow: hidden;
}

.dialog__title {
    position: relative;
    z-index: 1;
    width: 100%;
    line-height: 52rpx;
    height: 52rpx;
    padding: 0 48rpx;
    font-size: 40rpx;
    margin: 40rpx 0 32rpx;
    box-sizing: border-box;
    font-weight: 700;
    text-align: center;
    display: inline-block;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.dialog__title.dialog__title__top {
    margin-top: 60rpx;
}

.dialog__content {
    position: relative;
    z-index: 1;
    width: 100%;
    font-size: 30rpx;
    line-height: 44rpx;
    padding: 32rpx 48rpx 60rpx;
    font-weight: 400;
    color: rgba(0,0,0,.85);
    box-sizing: border-box;
}

.dialog__btns__group {
    position: relative;
    z-index: 1;
    border-top: 1rpx solid rgba(0,0,0,.1);
    overflow: hidden;
}

.dialog__btns__group .dialog__btn__cancel,.dialog__btns__group .dialog__btn__submit {
    font-size: 36rpx;
    font-weight: 700;
    line-height: 98rpx;
    text-align: center;
    background: #fff;
    color: rgba(0,0,0,.65);
}

.dialog__btns__group-row {
    display: flex;
}

.dialog__btns__group-row .dialog__btn__item {
    width: 50%;
    height: 98rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.dialog__btns__group-row .dialog__btn__item:first-child {
    border-right: 1rpx solid rgba(0,0,0,.1);
}

.dialog__btns__group-column {
    display: flex;
    flex-direction: column-reverse;
    border-top: none;
    overflow: hidden;
}

.dialog__btns__group-column .dialog__btn__item {
    width: 100%;
    height: 98rpx;
    box-sizing: border-box;
    border-top: 1rpx solid rgba(0,0,0,.1);
}

.busi-dialog__bg {
    position: absolute;
    z-index: 1;
    width: 100%;
    height: 100%;
    transition: all .3s cubic-bezier(.7,.3,.1,1);
    background: transparent;
}