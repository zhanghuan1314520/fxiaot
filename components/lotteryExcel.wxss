    border-bottom: 2rpx solid #e8f3ff;
    box-sizing: border-box;
    display: table-cell;
}

.only-total-num-table .right-content .-table>.tr>.td:first-child {
    width: 24%;
    color: rgba(0,0,0,.85);
    font-weight: 400!important;
    border-left: none;
    white-space: nowrap;
}