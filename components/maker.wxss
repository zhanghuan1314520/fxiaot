.marker {
    width: auto;
    height: 88rpx;
    position: relative;
}

.marker .rote {
    width: 0;
    height: 0;
    border-right: 10rpx solid transparent;
    border-left: 10rpx solid transparent;
    border-bottom: 10rpx solid rgba(0,0,0,.7);
    margin-left: 30rpx;
}

.marker .b-rote {
    width: 0;
    height: 0;
    border: 10rpx solid transparent;
    border-top-color: rgba(0,0,0,.7);
}

.marker .content {
    height: 78rpx;
    width: 100%;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,.7);
    font-size: 28rpx;
    font-weight: 400;
    color: #fff;
    line-height: 36rpx;
}