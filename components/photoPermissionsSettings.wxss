.permissions-settings {
    width: 606rpx;
    background: #fff;
    border-radius: 8rpx;
    text-align: center;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 998;
}

.permissions-settings .tips-content {
    padding-top: 54rpx;
    padding-bottom: 8rpx;
    line-height: 50rpx;
    z-index: 39;
}

.permissions-settings .text {
    line-height: 50rpx;
    padding-bottom: 48rpx;
    z-index: 39;
}

.permissions-settings .bottom-btn {
    border-top: 1rpx solid rgba(0,0,0,.1);
    height: 100rpx;
    line-height: 100rpx;
    align-items: center;
    overflow: hidden;
}

.permissions-settings .bottom-btn .cancle {
    text-align: center;
    width: 50%;
    float: left;
    border-right: 1rpx solid #e2e4ea;
    color: #606266;
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
}

.permissions-settings .bottom-btn .sure-btn {
    height: 100%;
    line-height: 100rpx;
    text-align: center;
    width: 50%;
    float: right;
    color: #2f8cef;
    background: transparent;
}

.hide-bg {
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.65);
    z-index: 997;
    width: 100vw;
    height: 100vh;
}