.img-tags {
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 3;
}

.img-tags .img-tag-item {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    display: inline-block;
    margin: 0 3rpx;
}

.img-tags .img-tag-item image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.post-item-picture {
    overflow: hidden;
    position: relative;
    padding-top: 16rpx;
}

.video-img {
    width: 400rpx;
    height: 260rpx;
    border-radius: 4rpx;
    position: relative;
}

.video-img image {
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
}

.video-img .video-play-btn {
    position: absolute;
    z-index: 2;
    width: 100rpx;
    height: 100rpx;
    margin: auto;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    font-size: 90rpx;
    line-height: 90rpx;
}

.nine-img-box {
    width: 100%;
    overflow: hidden;
}

.nine-img-box .img-01 {
    width: 400rpx;
    height: 260rpx;
    border-radius: 4rpx;
    position: relative;
    background: #f2f2f2;
}

.nine-img-box .img-box {
    float: left;
    width: 180rpx;
    height: 180rpx;
    border-radius: 4rpx;
    margin: 8rpx 8rpx 0 0;
    background: #f2f2f2;
}

.nine-img-box:nth-child(3n) {
    margin-right: 0;
}