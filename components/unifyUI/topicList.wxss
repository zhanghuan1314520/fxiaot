.topic-list .title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32rpx 24rpx 16rpx;
}

.topic-list .title .more-text {
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(21,24,45,.35);
}

.topic-list .title .more-text .iconnew {
    margin-left: 8rpx;
}

.topic-list .border-line {
    padding: 32rpx 0rpx 22rpx 24rpx;
    border-bottom: 1rpx solid rgba(21,24,45,.05);
}

.topic-list .scroll-view-list {
    display: flex;
    flex-wrap: nowrap;
    padding: 0 24rpx 24rpx 6rpx;
    box-sizing: border-box;
    background: #fff;
    overflow: hidden;
}

.topic-list .scroll-view-list .all-discussion {
    float: left;
    width: 100rpx;
    height: 280rpx;
    margin-left: 16rpx;
    background: #f3f3f3;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.topic-list .scroll-view-list .all-discussion .text {
    width: 28rpx;
    height: 160rpx;
    font-weight: 700;
    color: #96989e;
    line-height: 40rpx;
}

.topic-list .scroll-view-list .question-cont {
    height: 280rpx;
    width: 560rpx;
    margin-left: 16rpx;
    position: relative;
    float: left;
    box-sizing: border-box;
    padding: 20rpx 24rpx 24rpx;
    background: url(https://imgcdn.huanjutang.com/assets/img/20191014/5da413596c7df.png) 50%/100% 100% no-repeat;
    color: #ff2e2e;
}

.topic-list .scroll-view-list .question-cont .question-type {
    text-align: left;
    line-height: 34rpx;
}

.topic-list .scroll-view-list .question-cont .question-type .text {
    display: inline-block;
    line-height: 34rpx;
}

.topic-list .scroll-view-list .question-cont .question-type .iconnew {
    margin-right: 4rpx;
    vertical-align: middle;
}

.topic-list .scroll-view-list .question-cont .question-type .line {
    width: 2rpx;
    height: 16rpx;
    background: #606266;
    display: inline-block;
    margin: 0rpx 12rpx 0;
}

.topic-list .scroll-view-list .question-cont .question-title {
    text-align: left;
    line-height: 44rpx;
    margin: 20rpx 0 0rpx 4rpx;
    height: 88rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    padding-top: 5rpx;
    box-sizing: border-box;
}

.topic-list .scroll-view-list .question-cont .discuss-cont {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 40rpx;
}

.topic-list .scroll-view-list .question-cont .discuss-cont .particument-btn {
    width: 160rpx;
    height: 60rpx;
    background: #fc5884;
    border-radius: 32rpx;
    line-height: 60rpx;
    text-align: center;
}

.topic-list .scroll-view-list .question-cont .discuss-cont .particument-btn.active-0 {
    background: #fc5884;
}

.topic-list .scroll-view-list .question-cont .discuss-cont .particument-btn.active-1 {
    background: #2d8cf0;
}

.topic-list .scroll-view-list .question-cont .discuss-cont .particument-btn.active-2 {
    background: #ffa02c;
}

.topic-list .scroll-view-list .question-cont .discuss-cont .particument-btn.active-3 {
    background: #23cd94;
}

.topic-list .scroll-view-list .active-0 {
    background: url(https://imgcdn.huanjutang.com/assets/img/20191205/5de8cf24c3ad1.png) 50%/100% 100% no-repeat;
    color: #ff2e2e;
}

.topic-list .scroll-view-list .active-1 {
    background: url(https://imgcdn.huanjutang.com/assets/img/20191205/5de8cf11c5f5d.png) 50%/100% 100% no-repeat;
    color: #2d8cf0;
}

.topic-list .scroll-view-list .active-2 {
    background: url(https://imgcdn.huanjutang.com/assets/img/20191205/5de8cf3ae60c4.png) 50%/100% 100% no-repeat;
    color: #ffa02c;
}

.topic-list .scroll-view-list .active-3 {
    background: url(https://imgcdn.huanjutang.com/assets/img/20191209/5dedafa33b9ce.png) 50%/100% 100% no-repeat;
    color: #23cd94;
}

.topic-list .font-color-subtitlle {
    color: #606266!important;
    font-weight: 700;
}

.topic-list .vote {
    width: 100%;
    height: 60rpx;
    margin-top: 34rpx;
    box-sizing: content-box;
    display: flex;
    justify-content: center;
    align-items: center;
}

.topic-list .vote .left,.topic-list .vote .right {
    width: 240rpx;
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 24rpx;
    font-weight: 600;
    color: #fff;
    position: relative;
}

.topic-list .vote .left {
    background: url(https://imgcdn.huanjutang.com/assets/img/20191205/5de8dbb122a4f.png) no-repeat;
    background-size: 100% 100%;
}

.topic-list .vote .center {
    flex: none;
    width: 46rpx;
    height: 34rpx;
    background: url(https://imgcdn.huanjutang.com/assets/img/20191120/5dd4a1afe9a87.png);
    background-size: 100% 100%;
    margin: 0 8rpx;
}

.topic-list .vote .right {
    background: url(https://imgcdn.huanjutang.com/assets/img/20191205/5de8dbc7786bb.png) no-repeat;
    background-size: 100% 100%;
}

.topic-list .unify-ui-vote {
    padding: 28rpx 0rpx 0rpx;
}

.topic-list .unify-ui-vote .vote-text {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.topic-list .unify-ui-vote .vote-text .text {
    height: 24rpx;
    font-weight: 600;
    color: #2d8cf0;
    line-height: 24rpx;
}

.topic-list .unify-ui-vote .sky-blue {
    color: #2d8cf0!important;
}

.topic-list .unify-ui-vote .purple {
    color: #fc5884!important;
}

.topic-list .unify-ui-vote .vote-result {
    display: flex;
    margin-top: 12rpx;
}

.topic-list .unify-ui-vote .vote-result .view {
    height: 30rpx;
    position: relative;
}

.topic-list .unify-ui-vote .vote-result .left {
    border-radius: 30rpx 0rpx 0rpx 30rpx;
    background-color: #2d8cf0;
    margin-right: 16rpx;
}

.topic-list .unify-ui-vote .vote-result .left:after {
    content: "";
    width: 0;
    height: 0;
    border-top: 30rpx solid #2d8cf0;
    border-right: 16rpx solid transparent;
    position: absolute;
    right: -16rpx;
}

.topic-list .unify-ui-vote .vote-result .right {
    border-radius: 0rpx 30rpx 30rpx 0rpx;
    background-color: #fc5884;
    margin-left: 16rpx;
    left: 0;
}

.topic-list .unify-ui-vote .vote-result .right:after {
    content: "";
    width: 0;
    height: 0;
    border-bottom: 30rpx solid #fc5884;
    border-left: 16rpx solid transparent;
    position: absolute;
    left: -16rpx;
}