.animated {
    animation-duration: 1s;
    animation-fill-mode: both;
}

@-webkit-keyframes zoomOut {
    from {
        opacity: 1;
    }

    50% {
        opacity: 0;
        transform: scale3d(.3,.3,.3);
    }

    to {
        opacity: 0;
    }
}

@keyframes zoomOut {
    from {
        opacity: 1;
    }

    50% {
        opacity: 0;
        transform: scale3d(.3,.3,.3);
    }

    to {
        opacity: 0;
    }
}

.zoomOut {
    animation-name: zoomOut;
}

@-webkit-keyframes fadeOutRight {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
        transform: translate3d(100%,0,0);
    }
}

@keyframes fadeOutRight {
    from {
        opacity: 1;
    }

    to {
        opacity: 0;
        transform: translate3d(100%,0,0);
    }
}

.fadeOutRight {
    animation-name: fadeOutRight;
}

.android .tip-bg {
    box-sizing: border-box;
    background: transparent;
    z-index: 1000;
    overflow: hidden;
    position: fixed;
    right: 0;
    top: 64px;
    width: 540rpx;
    left: inherit!important;
}

.android .tip-bg.show {
    display: block;
}

.android .tip-bg .tip-bar {
    float: right;
    height: auto;
    overflow: hidden;
    background: rgba(0,0,0,.8);
    border-radius: 6rpx;
    line-height: 30rpx;
    padding: 0 24rpx 15rpx;
    position: relative;
    margin-top: 8px;
    margin-right: 18rpx;
}

.android .tip-bg .tip-bar .image {
    height: 32rpx;
    width: 32rpx;
    vertical-align: middle;
    margin-right: 10rpx;
}

.android .tip-bg .tip-bar:before {
    content: "";
    height: 0;
    width: 0;
    border-left: 16rpx solid transparent;
    border-right: 16rpx solid transparent;
    border-bottom: 18rpx solid rgba(0,0,0,.8);
    display: inline-block;
    position: absolute;
    top: -16rpx;
    right: 120rpx;
}

.android .tip-bg .tip-text {
    line-height: 68rpx;
    font-size: 26rpx;
    color: #fff;
}

.android .tip-bg .tip-lottery {
    padding-right: 20rpx;
    color: #fff;
}

.android .tip-bg .tip-close {
    color: #fff;
    float: right;
    line-height: 1;
    padding-top: 18rpx;
}

.android .tip-bg .tip-box {
    background: #3772cc;
    overflow: hidden;
    height: 185rpx;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 999;
}

.android .sub-tip-text {
    width: 100%;
    height: auto;
    overflow: hidden;
    font-size: 26rpx;
    font-weight: 400;
    color: #fff;
    line-height: 36rpx;
    margin-top: -10rpx;
}

