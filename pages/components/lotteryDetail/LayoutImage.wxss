.general-layout-cont {
    border: 0!important;
    height: auto!important;
    overflow: hidden;
}

.general-layout-stage {
    position: relative;
    width: auto;
    height: 400rpx;
}

.general-layout-stage .general-layout__img {
    width: 100%;
    height: 100%;
}

.general-layout-building {
    padding: 0 8rpx;
}

.general-layout-building .general-layout-building-title {
    margin: 24rpx 0rpx 21rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
}

.general-layout-building .general-layout-building-title .building-title-item {
    color: rgba(0,0,0,.45);
    font-size: 28rpx;
}

.building-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    text-align: center;
    color: rgba(0,0,0,.85);
    font-size: 28rpx;
    margin: 21rpx 0;
}

.redicturl {
    height: 88rpx;
    background: rgba(47,140,239,.08);
    border-radius: 4rpx;
    line-height: 88rpx;
    font-weight: 500;
    color: #2d8cf0;
    font-size: 30rpx;
    text-align: center;
}