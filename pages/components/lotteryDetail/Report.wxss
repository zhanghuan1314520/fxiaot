.discovery-report {
    position: absolute;
    height: 60rpx;
    padding-left: 40rpx;
    top: -6rpx;
    right: 0;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    z-index: 9;
}

.discovery-report .iconnew {
    line-height: 1;
    color: #d9d9d9;
    font-size: 32rpx;
}

.auth-report-text {
    background: url(https://imgcdn.huanjutang.com/assets/img/2020561032458081.png);
    background-size: cover;
    width: 74rpx;
    height: 36rpx;
    line-height: 36rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    left: 30rpx;
    top: 50%;
    transform: translate(-100%,-50%);
}

.report-text {
    font-size: 22rpx;
    color: #fff;
    margin-left: -4rpx;
}