.sign-timer {
    width: 100%;
    height: 84rpx;
    background: url(https://imgcdn.huanjutang.com/image/2020/08/06/23c4f9563a8cadf0a710bd4c421e28ae.png) no-repeat 50%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.sign-timer .left {
    margin-left: 32rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: hsla(0,0%,100%,.95);
}

.sign-timer .timeout {
    display: inline-flex;
    width: auto;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    margin-right: 12rpx;
}

.sign-timer .timeout .num {
    width: 56rpx;
    height: 56rpx;
    background: hsla(0,0%,100%,.15);
    border-radius: 4rpx;
    color: #fff;
    font-size: 30rpx;
    font-weight: 700;
    text-align: center;
}

.sign-timer .timeout .split {
    width: 44rpx;
    height: 56rpx;
    text-align: center;
    color: #fff;
    font-size: 24rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    color: hsla(0,0%,100%,.8);
}