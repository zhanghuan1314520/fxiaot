.wrap {
    margin-top: 34rpx;
}

.statement-item {
    overflow: hidden;
    margin-left: 28rpx;
    margin-right: 24rpx;
}

.statement-all-top {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #fff;
    border-bottom: 1rpx solid rgba(48,55,64,.05);
}

.statement-all-top .content {
    display: -webkit-box;
}

.statement-all-top .item {
    position: relative;
    padding: 0 20rpx;
    margin-right: 14rpx;
    box-sizing: border-box;
    border-radius: 6rpx;
    color: #303237;
    letter-spacing: 1rpx;
    font-size: 28rpx;
}

.statement-all-top .item .span {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 0rpx;
    height: 6rpx;
    background: #fff;
    border-radius: 4rpx;
    transition: width .2s;
}

.statement-all-top .active {
    color: #2d8cf0;
    font-weight: 600;
    font-size: 32rpx!important;
}

.statement-all-top .active .span {
    background: #2f8cef;
    width: 72rpx;
}

.statement-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    padding-left: 30rpx;
    padding-bottom: 16rpx;
    padding-top: 16rpx;
}

.statement-top .affirming {
    width: auto;
    font-size: 26rpx;
    font-weight: 400;
    color: #96989e;
}

.statement-top .affirming text:last-child {
    color: #6a82c7;
}

.statement-top .share-btn {
    display: flex;
    align-items: center;
    background: transparent;
    font-size: 26rpx;
    color: #6a82c7;
}

.statement-top .share-btn .icon-fenxiang5 {
    margin-left: 10rpx;
}

.mes-cont {
    width: 58rpx;
    height: 58rpx;
    font-size: 30rpx;
    margin-left: 28rpx;
}

.mes-cont .image {
    height: 58rpx;
    width: 58rpx;
    border-radius: 29rpx;
}

.phone-cont {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    width: 58rpx;
    height: 58rpx;
    border-radius: 58rpx;
    overflow: hidden;
    margin-left: 28rpx;
    color: #4f82ea;
    background-color: none;
}

.phone-cont .image {
    height: 58rpx;
    width: 58rpx;
    border-radius: 29rpx;
}

.statement-info {
    height: 58rpx;
    line-height: 58rpx;
    width: auto;
}

.statement-info .point {
    margin-top: 17rpx;
    width: 24rpx;
    height: 24rpx;
    position: relative;
}

.statement-info .point .point__image {
    width: 24rpx;
    height: 24rpx;
    float: left;
}

.statement-info .line {
    display: inline-block;
    width: 2rpx;
    height: 20rpx;
    background: #edeff2;
    margin: 0 8rpx;
}

.statement-info .authors {
    margin-left: 14rpx;
    color: #96989e;
    font-size: 24rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.statement-info .icons {
    width: 175rpx;
    display: flex;
    align-items: center;
}

.statement-bodys {
    clear: both;
    margin-left: 10rpx;
    border-left: 4rpx solid #f5f7fa;
    width: auto;
    height: auto;
    overflow: hidden;
    padding-left: 24rpx;
}

.statement-bodys .statement-title {
    width: auto;
    height: auto;
    overflow: hidden;
    font-size: 30rpx;
    font-weight: 700;
    color: #303237;
    line-height: 42rpx;
    margin-bottom: 12rpx;
}

.statement-bodys .statement-content {
    font-size: 28rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 36rpx;
}

.statement-content.wrap {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.statement-dropContent {
    box-sizing: border-box;
    color: #2d8cf0;
    font-size: 26rpx;
    margin-top: 12rpx;
}

.statement-images {
    width: auto;
    height: auto;
    overflow: hidden;
    margin-bottom: 24rpx;
    margin-top: 24rpx;
}

.image-item-one {
    border-radius: 4rpx;
}

.image-item-one,.image-item-one .image__one__img {
    width: 400rpx;
    height: 260rpx;
}

.image-item {
    border-radius: 4rpx;
    margin-right: 8rpx;
    margin-bottom: 8rpx;
    float: left;
}

.image-item,.image-item .image__item__img {
    width: 180rpx;
    height: 180rpx;
}

.f-left {
    float: left;
}

.f-right {
    float: right;
}