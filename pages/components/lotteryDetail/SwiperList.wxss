.image-container {
    width: 100%;
    height: 100%;
}

.navs {
    width: auto;
    padding: 4rpx;
    background: rgba(0,0,0,.5);
    border-radius: 24rpx;
    position: absolute;
    z-index: 98;
    right: 32rpx;
    bottom: 24rpx;
    display: inline-flex;
    justify-content: center;
    align-items: center;
}

.navs.bg-none {
    background: none!important;
}

.navs .nav-item {
    width: 88rpx;
    height: 38rpx;
    background: none;
    border-radius: 19rpx;
    font-size: 24rpx;
    color: #fff;
    float: left;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    line-height: 1;
}

.navs .nav-item.nav-item-active {
    width: 88rpx;
    background: #2d8cf0;
}

.top-swiper {
    overflow: hidden;
    position: relative;
    background: #f7f7f7;
}

.top-swiper,.top-swiper .default-image {
    height: 600rpx;
    width: 100%;
}

.top-swiper .swiper {
    position: relative;
    display: block;
    width: 100%;
    height: 600rpx;
    z-index: 1;
}

.top-swiper .swiper .video-pre {
    overflow: hidden;
}

.top-swiper .swiper .swiper-img,.top-swiper .swiper .video-pre {
    position: relative;
    width: 100%;
    height: 100%;
    z-index: 1;
    margin: 0 auto;
}

.top-swiper .swiper .swiper-img {
    display: block;
}

.top-swiper .preview-shadow {
    display: block;
    position: absolute;
    z-index: 2;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 112rpx;
}

.aerial-icon,.video-img-icon {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    background: rgba(0,0,0,.5);
    z-index: 2;
    transform: translate(-50%,-50%);
    display: flex;
    align-items: center;
    justify-content: center;
}

.aerial-icon .iconnew,.video-img-icon .iconnew {
    font-size: 62rpx!important;
    color: #fff!important;
}

.aerial-icon {
    background: none;
    background-image: url(https://imgcdn.huanjutang.com/assets/img/20209151630208081.png);
    background-size: 100%;
    background-position: 50%;
    background-repeat: no-repeat;
}

.liver {
    position: absolute;
    top: 50%;
    text-align: center;
    width: 216rpx;
    height: 216rpx;
    margin-top: -108rpx;
    left: 50%;
    margin-left: -108rpx;
    z-index: 1;
    border-radius: 50%;
}

.liver--living {
    display: flex;
    justify-content: center;
    align-items: center;
}

.liver--advance {
    background: rgba(0,0,0,.56);
}

.liver__img {
    width: 50rpx;
    height: 50rpx;
    margin-top: 40rpx;
}

.liver__img--avatar {
    width: 144rpx;
    height: 144rpx;
    border-radius: 50%;
}

.liver__img--xinhao {
    width: 30rpx;
    height: 30rpx;
    margin-right: 8rpx;
}

.liver__love__img {
    position: absolute;
    width: 228rpx;
    height: 228rpx;
}

.liver__btn {
    width: 132rpx;
    height: 44rpx;
    background: linear-gradient(42deg,#ff8e5c,#f03c50);
    border-radius: 20rpx;
    position: absolute;
    bottom: 32rpx;
    left: 50%;
    margin-left: -66rpx;
    font-size: 24rpx;
    font-weight: 700;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.liver__text {
    color: #fff;
    font-size: 28rpx;
}

.liver__text--time {
    margin-top: 4rpx;
}

.liver__text--title {
    margin-top: 8rpx;
}