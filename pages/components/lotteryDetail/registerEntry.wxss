.canvas {
    position: absolute;
    left: 400px;
    top: -400px;
}

.register-entry-bg {
    position: fixed;
    z-index: 200;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0,0,0,.75);
}

.register-entry-bg .entry-con {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
}

.register-entry-bg .content {
    width: 566rpx;
    min-height: 766rpx;
    padding: 80rpx 0 66rpx;
    text-align: center;
    box-sizing: border-box;
    background-size: cover;
}

.register-entry-bg .content .text {
    display: block;
}

.register-entry-bg .content .project-name {
    height: 56rpx;
    font-size: 56rpx;
    font-weight: 700;
    color: #fff;
    line-height: 76rpx;
    padding: 0 90rpx;
    display: inline-block;
}

.register-entry-bg .content .wrapper {
    width: 252rpx;
    height: 252rpx;
    background-color: #fff;
    margin: 20rpx auto 16rpx;
}

.register-entry-bg .content .wrappper__img {
    width: 100%;
    height: 100%;
}

.register-entry-bg .content .qr-name {
    font-size: 32rpx;
    font-weight: 700;
    color: #000;
    line-height: 44rpx;
    display: block;
}

.register-entry-bg .content .qr-register {
    height: 40rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 40rpx;
    margin: 8rpx 0 20rpx;
    display: block;
}

.register-entry-bg .content .btn {
    width: 228rpx;
    height: 68rpx;
    border-radius: 40rpx;
    border: 2rpx solid #2d8cf0;
    font-size: 28rpx;
    color: #2d8cf0;
    line-height: 68rpx;
    background: #fff;
    text-align: center;
    margin: 0 auto;
}

.register-entry-bg .close {
    margin-top: 60rpx;
    width: 64rpx;
    height: 64rpx;
}

.register-entry-bg .button-hover {
    background: none;
}

.permissions-settings {
    width: 606rpx;
    background: #fff;
    border-radius: 8rpx;
    text-align: center;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 998;
}

.permissions-settings .tips-content {
    padding-top: 54rpx;
    padding-bottom: 8rpx;
    line-height: 50rpx;
    z-index: 39;
}

.permissions-settings .text {
    line-height: 50rpx;
    padding-bottom: 48rpx;
    z-index: 39;
}

.permissions-settings .bottom-btn {
    border-top: 1rpx solid rgba(0,0,0,.1);
    height: 100rpx;
    line-height: 100rpx;
    align-items: center;
    overflow: hidden;
}

.permissions-settings .bottom-btn .cancle {
    text-align: center;
    width: 50%;
    float: left;
    border-right: 1rpx solid #e2e4ea;
    color: #606266;
    height: 100rpx;
    line-height: 100rpx;
    box-sizing: border-box;
}

.permissions-settings .bottom-btn .sure-btn {
    height: 100%;
    line-height: 100rpx;
    text-align: center;
    width: 50%;
    float: right;
    color: #2f8cef;
    background: transparent;
}

.hide-bg {
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.65);
    z-index: 997;
    width: 100vw;
    height: 100vh;
}