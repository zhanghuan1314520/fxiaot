.hot-article {
    position: relative;
    height: 328rpx;
    width: 480rpx;
    border-radius: 16rpx;
    margin-left: 24rpx;
    border: 2rpx solid rgba(21,24,45,.05);
    box-sizing: border-box;
}

.hot-article__title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    height: 88rpx;
    line-height: 44rpx;
    margin: 20rpx 24rpx 0;
    color: #303237;
    font-size: 28rpx;
}

.hot-article__cover {
    width: 100%;
    height: 196rpx;
    border-top-right-radius: 16rpx;
    border-top-left-radius: 16rpx;
}