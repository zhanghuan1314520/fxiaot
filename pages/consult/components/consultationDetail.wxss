.article-top-banner {
    height: 300rpx;
    position: relative;
}

.article-top-banner .swiper {
    height: 300rpx;
    overflow: hidden;
}

.article-top-banner .slide-image {
    width: 100%;
    height: 300rpx;
}

.page-articles {
    overflow: hidden;
}

.page-articles .dern,.page-articles .hot-articles {
    margin-bottom: 16rpx;
}

.page-articles .dern .scroll-view,.page-articles .hot-articles .scroll-view {
    background: #fff;
}

.page-articles .article-title {
    width: 100%;
    line-height: 80rpx;
    overflow: hidden;
}

.page-articles .article-title .text {
    float: left;
}

.page-articles .article-title .see-more {
    float: right;
}

.posts-menu {
    padding: 24rpx 0 20rpx;
    overflow: hidden;
    margin-bottom: 16rpx;
}

.posts-menu .posts-menu-list {
    display: flex;
    flex-direction: column;
    float: left;
    align-items: center;
    width: 25%;
    overflow: hidden;
}

.posts-menu .posts-menu-list .icon {
    width: 90rpx;
    height: 90rpx;
    margin-bottom: 10rpx;
}

.common-box {
    padding: 32rpx 24rpx 36rpx;
    width: 100%;
    background-color: #fff;
    box-sizing: border-box;
    overflow: hidden;
}

.common-box.hot-article-title {
    padding-bottom: 8rpx;
}

.common-title {
    font-size: 32rpx;
    color: #303740;
    float: left;
    line-height: 32rpx;
}

.more-text {
    float: right;
    color: rgba(21,24,45,.35);
    position: relative;
}

.dern {
    overflow: hidden;
}

.scroll-view {
    flex-wrap: wrap;
    padding-bottom: 24rpx;
}

.article-list,.scroll-view {
    display: flex;
    justify-content: flex-start;
}

.article-list {
    padding: 0 24rpx 24rpx 0;
    box-sizing: border-box;
    background: #fff;
    overflow: hidden;
}