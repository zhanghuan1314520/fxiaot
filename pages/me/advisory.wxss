.page {
    display: flex;
    flex-direction: column;
    width: 100vw;
    height: 100vh;
    box-sizing: border-box;
    overflow: hidden;
}

.page .advisory {
    flex: 1;
    overflow: hidden;
}

.tip-message {
    width: 750rpx;
    height: 84rpx;
    line-height: 84rpx;
    background: #fff6df;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 28rpx;
    box-sizing: border-box;
}

.tip-message .left {
    font-size: 28rpx;
    font-weight: 400;
    color: #99651f;
}

.tip-message .right {
    width: 140rpx;
    height: 46rpx;
    line-height: 46rpx;
    background: #ffecba;
    border-radius: 23rpx;
    border: 2rpx solid #ffd05a;
    font-size: 26rpx;
    font-weight: 400;
    color: #99651f;
    padding: 0 16rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.tip-message .right text {
    vertical-align: middle;
}

.read-num {
    line-height: 76rpx;
    height: 76rpx;
    justify-content: space-between;
    padding: 0 32rpx;
    box-sizing: border-box;
    border-bottom: 1rpx solid rgba(21,24,45,.05);
}

.read-num,.read-num .read-btn {
    display: flex;
    align-items: center;
}

.read-num .read-btn {
    text-align: center;
    color: #2d8cf0;
}

.read-num .read-btn .iconnew {
    margin-right: 6rpx;
    font-size: 28rpx!important;
}

.w-100 {
    width: 56rpx!important;
}

.w-99,.w-100 {
    border-radius: 16px!important;
}

.w-99 {
    width: 46rpx!important;
}

.advisory-content {
    margin-left: 32rpx;
    position: relative;
}

.advisory-content.last {
    margin-bottom: 20rpx;
}

.advisory-content.active .advisory-content-box {
    transform: translate(-140rpx);
}

.advisory-content.active-sure .advisory-content-box {
    transform: translate(-280rpx);
}

.advisory-content.active-sure .del-sure-button {
    z-index: 3;
}

.advisory-content .advisory-content-box {
    position: relative;
    width: 100%;
    z-index: 4;
    background: #fff;
    transition: transform .2s ease-out;
    transition: transform .2s ease-out,-webkit-transform .2s ease-out;
    transform: translate(0);
    overflow: hidden;
}

.advisory-content .del-btn {
    position: absolute;
    right: 0;
    height: 100%;
    background: #ee3f4d;
    color: #fff;
    top: 0;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
}

.advisory-content .del-button {
    width: 140rpx;
    padding-left: 140rpx;
    z-index: 2;
}

.advisory-content .del-sure-button {
    width: 280rpx;
    z-index: 1;
}

.advisory-content-left {
    position: relative;
    float: left;
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    padding-top: 24rpx;
}

.advisory-content-left-wrap {
    width: 88rpx;
    height: 88rpx;
    background: #edeff2;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    border-radius: 50%;
}

.advisory-content-left>.image {
    position: relative;
    z-index: 1;
    width: 86rpx;
    height: 86rpx;
    border-radius: 88rpx;
    border: 2rpx solid rgba(0,0,0,.08);
}

.advisory-content-left.no-border>.image {
    border-color: transparent;
}

.advisory-content-left .label {
    position: absolute;
    bottom: -6rpx;
    left: 10rpx;
    z-index: 2;
    width: 76rpx;
    height: 36rpx;
    line-height: 36rpx;
    border-radius: 18rpx;
    text-align: center;
    font-size: 22rpx;
    font-weight: 400;
    color: #fff;
    background: #bfbfbf;
}

.advisory-content-left .label.label-2 {
    background: #0ab464;
}

.advisory-content-left .label.label-3 {
    background: #2d8cf0;
}

.advisory-content-right {
    margin-left: 112rpx;
    padding: 30rpx 32rpx 28rpx 4rpx;
    border-bottom: 1rpx solid rgba(21,24,45,.05);
}

.advisory-content-right .top-name {
    font-size: 34rpx;
    line-height: 44rpx;
    color: rgba(0,0,0,.85);
}

.advisory-content-right .project-name {
    background: #f1f1f1;
    margin-left: 20rpx;
    padding: 7rpx 15rpx;
    display: inline-block;
    border-radius: 8rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 180rpx;
    overflow: hidden;
}

.advisory-content-right .name {
    max-width: 300rpx;
    margin-right: 12rpx;
    font-size: 34rpx;
    height: 44rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 44rpx;
}

.advisory-content-right .name,.advisory-content-right .project_name {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    float: left;
}

.advisory-content-right .project_name {
    max-width: 240rpx;
    color: #b5b6bb;
    height: 32rpx;
    line-height: 32rpx;
}

.advisory-content-right .time {
    float: right;
    line-height: 30rpx;
    color: #b5b6bb;
}

.advisory-content-right .red-circle-text {
    float: right;
    height: 32rpx;
    width: 32rpx;
    border-radius: 50%;
    z-index: 222;
    background: #ff453a;
    text-align: center;
    line-height: 32rpx;
    font-size: 22rpx;
}

.advisory-content-right .project-produce {
    text-overflow: ellipsis;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    padding-right: 20px;
    font-size: 28rpx;
    font-weight: 400;
    color: #96989e;
    text-align: left;
}

.advisory-content-right .line.top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
    line-height: 1;
    margin-bottom: 8rpx;
}

.advisory-content-right .line.bottom {
    height: 36rpx;
    line-height: 36rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.45);
}

.nothing {
    margin-top: 240rpx;
    text-align: center;
}

.nothing image {
    display: inline-block;
    width: 344rpx;
    height: 160rpx;
}

.nothing .nothing-text {
    position: relative;
    top: 20rpx;
}

.skeletons .list__avatar {
    width: 100%;
    height: 100%;
    border-radius: 80rpx;
}

.skeletons .list__username {
    width: 100%;
    height: 44rpx;
}

.skeletons .list__content {
    width: 200rpx;
    height: 36rpx;
}