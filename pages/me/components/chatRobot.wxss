.advisory-content-left .image {
    border: 0rpx!important;
    height: 120rpx;
    width: 120rpx;
    position: relative;
    left: -13rpx;
}

.advisory-wrap {
    background: rgba(47,140,239,.05);
}

.advisory-content-right {
    margin-left: 112rpx;
    padding: 35.5rpx 32rpx 32.5rpx 4rpx;
    border-bottom: 1rpx solid rgba(21,24,45,.05);
}

.advisory-content-right .top-name {
    font-size: 34rpx;
    line-height: 44rpx;
    color: rgba(0,0,0,.85);
}

.advisory-content-right .project-name {
    background: #f1f1f1;
    margin-left: 20rpx;
    padding: 7rpx 15rpx;
    display: inline-block;
    border-radius: 8rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    max-width: 180rpx;
    overflow: hidden;
}

.advisory-content-right .name {
    max-width: 300rpx;
    margin-right: 12rpx;
    font-size: 34rpx;
    height: 44rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 44rpx;
}

.advisory-content-right .name,.advisory-content-right .project_name {
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    float: left;
}

.advisory-content-right .project_name {
    max-width: 240rpx;
    color: #b5b6bb;
    height: 32rpx;
    line-height: 32rpx;
}

.advisory-content-right .time {
    float: right;
    line-height: 30rpx;
    color: #b5b6bb;
}

.advisory-content-right .red-circle-text {
    float: right;
    height: 32rpx;
    width: 32rpx;
    border-radius: 50%;
    z-index: 222;
    background: #ff453a;
    text-align: center;
    line-height: 32rpx;
    font-size: 22rpx;
}

.advisory-content-right .project-produce {
    text-overflow: ellipsis;
    display: block;
    white-space: nowrap;
    overflow: hidden;
    padding-right: 20px;
    font-size: 28rpx;
    font-weight: 400;
    color: #96989e;
    text-align: left;
}

.advisory-content-right .line.top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    overflow: hidden;
    line-height: 1;
    margin-bottom: 8rpx;
}

.advisory-content-right .line.bottom {
    height: 36rpx;
    line-height: 36rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.45);
}