.projects .projects__search {
    position: fixed;
    left: 0;
    width: 100%;
    z-index: 3;
    background: #fff;
}

.projects .projects__container {
    position: relative;
    z-index: 1;
    padding-top: 112rpx;
}

.projects .projects__grid {
    position: relative;
    z-index: 1;
    padding: 26rpx 32rpx 0;
    box-sizing: border-box;
}

.projects .projects__cube {
    padding: 44rpx 32rpx;
    box-sizing: border-box;
}

.projects .projects__column,.projects .projects__cube {
    position: relative;
    z-index: 1;
    width: 100%;
    overflow: hidden;
}

.projects .projects__filters {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 148rpx;
}

.projects .projects__filters .projects__filters-title {
    padding-left: 34rpx;
    color: rgba(0,0,0,.85);
    font-weight: 700;
    line-height: 52rpx;
    margin-bottom: 8rpx;
}

.projects .projects__filters .filters__fixed {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 3;
    width: 100%;
}

.projects .projects__filters .filters__bg {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.2);
    opacity: 0;
    transform: translateY(-100%);
    transition: opacity .3s;
}

.projects .projects__filters .filters__bg.filters__bg-active {
    opacity: 1;
    transform: translateY(0);
}

.projects .projects__list {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: 40rpx 32rpx 0;
    box-sizing: border-box;
}

.projects .not_id_card {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 220rpx;
}

.projects .not_id_card image {
    width: 358rpx;
    height: 224rpx;
}

.projects .not_id_card text {
    margin-top: 46rpx;
    color: #6a7490;
    font-size: 32rpx;
}