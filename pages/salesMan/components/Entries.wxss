.share-good-btn {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-align: center;
    margin: 0 24rpx 22rpx;
}

.share-good-btn .line {
    width: 342rpx;
    height: 154rpx;
    padding: 24rpx 0;
    text-align: center;
    background: #f8f8f8;
    position: relative;
    border-radius: 12rpx;
    margin-right: 22rpx;
    box-sizing: border-box;
    line-height: 1;
}

.share-good-btn .line:last-child {
    margin-right: 0;
}

.share-good-btn .line .text {
    font-size: 24rpx;
    font-weight: 400;
    color: #606266;
    line-height: 34rpx;
    background: transparent;
}

.share-good-btn .line .good-tips {
    position: absolute;
    right: -12rpx;
    top: -10rpx;
    width: 102rpx;
    height: 34rpx;
    background: linear-gradient(52deg,#ff8e5c,#ff5431);
    border-radius: 34rpx 34rpx 34rpx 0;
    font-size: 20rpx;
    font-weight: 500;
    color: #fff;
    line-height: 34rpx;
    text-align: center;
}

.share-good-btn button {
    overflow: fragments!important;
}

.share-good-btn .line-box {
    margin: 4rpx auto 16rpx;
    width: 60rpx;
    height: 60rpx;
    border-radius: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.share-good-btn .line-box.orange {
    background: linear-gradient(230deg,#ff8e5c,#ff5431);
    box-shadow: 0 4px 8px 0 rgba(255,126,80,.2);
}

.share-good-btn .line-box.blue {
    background: linear-gradient(231deg,#80ddff,#2d89f1);
    box-shadow: 0 4px 8px 0 rgba(63,155,244,.2);
}

.share-good-btn .line-box.green {
    background: linear-gradient(232deg,#8fe9a8,#08c37b);
    box-shadow: 0 4px 8px 0 rgba(50,208,155,.2);
}

.share-good-btn .line-box .img {
    width: 36rpx;
    height: 36rpx;
}

.share-good-btn .add-me {
    position: absolute;
    width: 98rpx;
    height: 52rpx;
    right: -8rpx;
    top: -12rpx;
}

.model {
    position: fixed;
    background: #fff;
    border-radius: 8rpx;
    width: 450rpx;
    padding: 0 50rpx;
    z-index: 1000;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.model .model-btn {
    display: flex;
    justify-content: space-around;
    border-top: 1rpx solid #f7f7f7;
    padding: 50rpx 0;
}

.model .image-box {
    width: 300rpx;
    height: 300rpx;
    margin: 120rpx auto 100rpx;
    border: 1rpx solid rgba(0,0,0,.3);
}

.model .image-box image {
    padding: 10rpx;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
}

.model .cont-txt {
    text-align: center;
}

.model .cont-txt .txt {
    display: block;
}

.model .savecode {
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 90rpx;
    border: 1rpx solid #3772cc;
    border-radius: 45rpx;
}

.model-bg {
    background: rgba(0,0,0,.1);
}

.get-user-info .hide-bg,.model-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 999;
}

.get-user-info .hide-bg {
    background: rgba(0,0,0,.65);
    display: flex;
    justify-content: center;
    align-items: center;
}

.get-user-info .box {
    z-index: 1000;
    width: 540rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    text-align: center;
    border-radius: 8rpx;
}

.get-user-info .box .title {
    padding-top: 50rpx;
}

.get-user-info .box .content {
    padding: 40rpx 30rpx;
}

.get-user-info .box .submit {
    height: 80rpx;
    line-height: 80rpx;
    border-top: 2rpx solid rgba(21,24,45,.05);
    background: transparent;
    color: #2f8cef;
}