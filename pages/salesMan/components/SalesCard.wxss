.card-detail {
    position: relative;
    padding: 28rpx 0;
    box-sizing: border-box;
    border-radius: 12rpx;
}

.top-info {
    padding: 0 28rpx;
    overflow: hidden;
}

.top-info .left-avatar {
    float: left;
    width: 124rpx;
    height: 124rpx;
    border-radius: 70rpx;
    border: 4rpx solid #f6e7d9;
    position: relative;
}

.right-cont {
    float: left;
    margin-top: 12rpx;
    margin-left: 20rpx;
}

.right-cont .name {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: row;
}

.right-cont .name .left {
    font-size: 36rpx;
    font-weight: 700;
    line-height: 50rpx;
    margin-right: 16rpx;
}

.right-cont .name .right {
    display: inline-block;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 40rpx;
    width: 192rpx;
    height: 38rpx;
    background: hsla(0,0%,100%,.5);
    border-radius: 38rpx;
    text-align: center;
}

.right-cont .weixin {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: row;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
    padding-top: 14rpx;
}

.right-cont .weixin .iconnew {
    margin-left: 6rpx;
}

.right-cont .grade {
    width: 32rpx;
    height: 72rpx;
}

.self-log {
    margin-top: 20rpx;
    padding-bottom: 24rpx;
    display: flex;
    justify-content: space-around;
    align-items: center;
    text-align: center;
    width: 100%;
}

.self-log .line {
    position: relative;
    padding: 0 20rpx;
    width: 100%;
}

.self-log .line .top {
    font-family: DINAlternate-Bold;
    font-size: 40rpx;
    font-weight: 700;
    line-height: 48rpx;
    margin-bottom: 16rpx;
}

.self-log .line .bottom {
    font-size: 24rpx;
    font-weight: 400;
    line-height: 34rpx;
}

.self-log .line:after {
    position: absolute;
    top: 14rpx;
    right: -1rpx;
    content: "";
    width: 4rpx;
    height: 22rpx;
    transform: rotate(30deg);
    background: rgba(122,79,21,.05);
}

.self-log .line:last-child:after {
    display: none;
}

.default-project {
    display: block;
    line-height: 24rpx;
    margin-top: 12rpx;
}

.default-project,.sign-text {
    font-size: 24rpx;
    font-weight: 400;
}

.sign-text {
    line-height: 34rpx;
}

.sign-text .resume {
    -webkit-line-clamp: 5;
}

.sign-text .resume,.sign-text .wrap {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}

.sign-text .wrap {
    -webkit-line-clamp: 2;
}

.sign-text .load-more {
    color: #6a82c7;
}

.view-person {
    margin-top: 26rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 24rpx;
}

.view-person .left {
    display: flex;
    justify-content: center;
    align-items: center;
}

.view-person .history {
    margin-right: 20rpx;
    overflow: hidden;
}

.view-person .history image {
    position: relative;
    display: inline-block;
    margin-left: -6rpx;
    width: 34rpx;
    height: 34rpx;
    border-radius: 100%;
    box-sizing: border-box;
    border: 2rpx solid #fff;
}

.view-person .history image:first-child {
    margin-left: 0;
}

.level-box {
    position: absolute;
    top: -20rpx;
    right: 20rpx;
    width: 110rpx;
    height: 110rpx;
    background: url(https://imgcdn.huanjutang.com/assets/img/20196191631118081.png) 50%/100% no-repeat;
}

.big_size-color {
    color: #7a4f15;
}

.normal_size-color {
    color: #8f5d19;
}

.line-color {
    border-color: rgba(122,79,21,.05);
}