.img-tags {
    height: 100%;
    width: 100%;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    text-align: center;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 3;
}

.img-tags .img-tag-item {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
    display: inline-block;
    margin: 0 3rpx;
}

.img-tags .img-tag-item image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.video-img {
    width: 400rpx;
    height: 260rpx;
    border-radius: 4rpx;
    position: relative;
}

.video-img image {
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
}

.video-img .video-play-btn {
    position: absolute;
    z-index: 2;
    width: 100rpx;
    height: 100rpx;
    margin: auto;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    font-size: 90rpx;
    line-height: 90rpx;
}

.img-three,.img-two {
    display: flex;
    justify-content: space-between;
}

.img-three {
    position: relative;
}

.img-three .right {
    position: relative;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.img-three .count {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 224rpx;
    height: 214rpx;
    background: linear-gradient(270deg,rgba(0,0,0,.6),rgba(0,0,0,.2));
    border-radius: 12rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 60rpx;
    font-family: SFUIText-Regular,SFUIText;
    color: hsla(0,0%,100%,.85);
}