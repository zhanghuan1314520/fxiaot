.canvas-box {
    position: relative;
}

.create-canvas-box {
    box-sizing: border-box;
    overflow: hidden;
    flex: 1;
    width: 100%;
    display: flex;
    justify-content: center;
    text-align: center;
}

.create-canvas-box .canvas-image {
    width: 572rpx;
    box-shadow: 0 4rpx 40rpx 0 rgba(48,55,64,.1);
}

.create-canvas-box .box {
    width: 100%;
}

.create-canvas-box .box.image-position {
    display: flex;
    justify-content: center;
    align-items: center;
    height: calc(100vh - 206rpx);
}

.create-canvas-box.canvas-scroll {
    width: 100%;
    text-align: center;
    overflow-y: scroll;
    padding-bottom: 206rpx;
}

.create-canvas-box.canvas-scroll .canvas-image {
    width: 572rpx;
}

.modal {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 99;
    background: rgba(0,0,0,.7);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.modal .image {
    width: 500rpx;
    height: 1000rpx;
    display: block;
}

.modal .save {
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    bottom: -70rpx;
    display: flex;
    align-items: center;
}

.modal .save .save-image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 4rpx;
}

.modal .save .save-text {
    color: #fff;
    font-size: 30rpx;
}

.modal .container {
    width: 500rpx;
    height: 1000rpx;
    background: #fff;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.modal .container .close {
    width: 64rpx;
    height: 64rpx;
    position: absolute;
    top: -32rpx;
    right: -32rpx;
}

.modal .container .logo {
    position: absolute;
    width: 336rpx;
    left: 50%;
    transform: translate(-50%);
    bottom: 100rpx;
}