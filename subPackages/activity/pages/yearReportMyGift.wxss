.my-gift .text1,.my-gift .text2 {
    color: rgba(250,238,201,.6);
    font-family: PingFangSC-Regular;
    font-size: 22rpx;
    font-weight: 400;
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    text-align: center;
    width: 100%;
}

.my-gift .text1 {
    bottom: 38rpx;
}

.my-gift .text2 {
    bottom: 0;
