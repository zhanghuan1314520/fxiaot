}

.fix-bg {
    top: 0;
    background: rgba(0,0,0,.3);
    height: 100%;
}

.comment_in,.fix-bg {
    position: fixed;
    left: 0;
    width: 100%;
}

.comment_in {
    bottom: 0;
    box-sizing: border-box;
    box-shadow: 2rpx 0 8rpx 0 rgba(0,0,0,.1);
