    color: #2f8cef;
}

.right-content-top {
    display: flex;
    align-items: center;
}

.discuss-top-content .left {
    margin: 36rpx 24rpx 24rpx;
    padding-top: 36rpx;
    width: 654rpx;
    box-sizing: content-box;
    font-size: 36rpx;
    font-weight: 500;
    color: #303237;
    line-height: 52rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
