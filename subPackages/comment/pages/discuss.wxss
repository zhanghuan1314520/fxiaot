    word-break: break-word;
}

.popular-content {
    padding: 0 24rpx 20rpx;
}

.popular-content text {
    line-height: 44rpx;
}

.contact {
    width: 118rpx;
    height: 34rpx;
    background: #e4f1ff;
    border-radius: 17rpx;
    margin-left: 8rpx;
    font-size: 22rpx;
    font-weight: 500;
    color: #2f8cef;
    display: flex;
    align-items: center;
    position: relative;
    top: 2rpx;
}

.contact .icon-box {
    width: 30rpx;
    height: 30rpx;
    background: linear-gradient(48deg,#1469ff,#31c5ff);
    text-align: center;
    line-height: 30rpx;
    border-radius: 30rpx;
    margin-right: 4rpx;
