}

.comment_in .btn {
    width: 610rpx;
    line-height: 50rpx;
    background: #fff;
    border-radius: 8rpx;
    border: 2rpx solid rgba(48,55,64,.1);
    float: left;
    text-align: left;
    padding-left: 24rpx;
    box-sizing: border-box;
}

.comment_in .btn.active {
    height: 84rpx;
}

.comment_in .comment-name {
    float: right;
    color: #2f8cef;
    padding-top: 8rpx;
    background: transparent;
    line-height: normal;
}

.orange-color {
    color: #f7776a!important;
}

.comment-child {
    width: 100%;
