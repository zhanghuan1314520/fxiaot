.comment-title {
    padding: 30rpx 24rpx;
    overflow: hidden;
}

.comment-title>.title {
    float: left;
}

.comment-title .comment-rules {
    float: right;
    background: #fff;
    padding-top: 10rpx;
}

.comment-title .comment-rules>text {
    margin-left: 6rpx;
}

.comment_box {
    background-color: #fff;
    padding-bottom: 30rpx;
}

.comment_box .comment_list,.comment_box .comment_list_child {
    line-height: 1.4;
    overflow: hidden;
}

.comment_box .comment_list_cont {
    font-weight: 400;
}

.comment_box .comment_list_time {
    padding-bottom: 10rpx;
    line-height: 44rpx;
}

.comment_box .comment_list_child {
    box-sizing: border-box;
    padding-left: 60px;
    margin-top: 20rpx;
}

.comment_box .comment_list_item {
    margin: 20rpx 0 0 24rpx;
    overflow: hidden;
}

.comment_box .comment_list_item .comment_list_avatar {
    float: left;
    display: flex;
    overflow: hidden;
}

.comment_box .comment_list_item .comment_list_avatar image {
    width: 60rpx;
    height: 60rpx;
    border-radius: 100%;
}

.comment_box .comment_list_item .comment_list_right {
    margin-left: 80rpx;
    padding-bottom: 16rpx;
    overflow: hidden;
    border-bottom: 1rpx solid rgba(21,24,45,.05);
    margin-right: 20rpx;
}

.comment_box .comment_list_item .comment_list_user {
    margin-bottom: 10rpx;
    line-height: 26rpx;
}

.comment_box .comment_list_item .comment_list_user>.contact-box {
    display: inline-block;
}

.comment_list_user_child {
    margin-top: 10rpx;
    line-height: 36rpx;
}

.comment_list_user_child>.contact-box {
    display: inline-block;
}

.comment_list_user_child:first-child {
    margin-top: 0;
}

.comment_list_user_child .goverment {
    width: 100rpx;
    height: 34rpx;
    margin-left: 8px;
    position: relative;
    top: 4rpx;
}

.comment_box .comment_list_item .comment_list_user .goverment {
    width: 100rpx;
    height: 34rpx;
    margin-left: 8rpx;
    position: relative;
    top: 4rpx;
}

.comment_box .comment_list_item .comment_time_share {
    width: 100%;
    margin-top: 10rpx;
    overflow: hidden;
}

.comment_box .comment_list_item .comment_time_share .float-right {
    background: #fff;
    line-height: 1;
}

.comment_box .comment_list_item .comment_time_share .float-right .pinglun-icon {
    width: 34rpx;
    padding: 0 10rpx;
}

.comment_box .comment_list_right .wrap {
    max-height: 138rpx;
    overflow: hidden;
}

.comment-child {
    margin-bottom: 10rpx;
    width: 100%;
    box-sizing: border-box;
    padding: 20rpx;
    background-color: #f3f3f4;
    border-radius: 4rpx;
    position: relative;
}

.comment_box {
    padding-bottom: 132rpx;
}

.comment_box .nothing {
    text-align: center;
    line-height: 100px;
}

.page-control {
    position: fixed;
    right: 0;
    bottom: 290rpx;
    z-index: 99;
    margin-right: 24rpx;
}

.page-control .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 84rpx;
    width: 84rpx;
    margin-top: 30rpx;
    color: #fff;
    line-height: 1;
    box-shadow: 0 4rpx 16rpx 0 rgba(35,205,148,.3);
    border-radius: 50%;
}

.backhome,.page-control .btn {
    background: rgba(35,205,148,.98);
}

.connect-salesman {
    display: flex;
    align-items: center;
    width: 686rpx;
    font-size: 26rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    color: #8e4f19;
    background: #faebdc;
    position: fixed;
    padding: 14rpx 20rpx;
    box-sizing: border-box;
    z-index: 99;
    margin-left: 32rpx;
    background-size: 50% 50%;
    border-radius: 6rpx;
    justify-content: space-around;
    transition: all .2s ease-in-out;
}

.connect-salesman .rt_btn {
    display: flex;
    justify-content: center;
    align-items: center;
}

.connect-salesman .btn {
    display: inline-block;
    width: 120rpx;
    height: 52rpx;
    background: #2d8cf0;
    border-radius: 26rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 500;
    color: #fff;
    line-height: 52rpx;
    text-align: center;
}

.connect-salesman .btn.call-btn {
    margin: 0 16rpx 0 26rpx;
}

.connect-salesman .btn.chat-btn {
    background: #1bc17b;
}

.connect-salesman .busi-button__primary,.connect-salesman .busi-button__success {
    background: transparent!important;
}

.connect-salesman .busi-button {
    background: transparent;
    height: 52rpx!important;
    line-height: 52rpx!important;
    font-size: 22rpx!important;
    font-weight: 400;
}

.connect-salesman-top {
    bottom: calc(154rpx + constant(safe-area-inset-bottom));
    bottom: calc(154rpx + env(safe-area-inset-bottom));
}

.connect-salesman-bottom {
    bottom: calc(24rpx + constant(safe-area-inset-bottom));
    bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.comment-input-project-box {
    display: flex;
    align-items: center;
    width: 100%;
    background: #fff;
    position: fixed;
    bottom: 0;
    box-sizing: border-box;
    z-index: 99;
    padding: 24rpx 32rpx env(safe-area-inset-bottom);
}

.comment-input-project-box .authorization {
    width: 100%;
}

.comment-input-project-box .comment-input-project {
    margin-bottom: 24rpx;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background: #2d8cf0;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 700;
    color: #fff;
}

.comment-input-project-box .comment-input-project .icon {
    width: 36rpx;
    height: 36rpx;
    margin-right: 12rpx;
    position: relative;
    top: 6rpx;
}

.comment_list {
    padding: 16rpx 32rpx 0;
}

.comment_list-showComment {
    padding-bottom: 100rpx;
}

.share {
    background: transparent;
    width: 100%;
    height: 100%;
    position: absolute;
}