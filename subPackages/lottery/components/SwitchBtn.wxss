.switch-btn {
    display: inline-block;
    width: 74rpx;
    border-radius: 28rpx;
    border: 4rpx solid #e5e5e5;
    box-sizing: border-box;
    background: #fff;
    transition: border,background .3s;
}

.switch-btn .circle {
    width: 36rpx;
    height: 36rpx;
    border-radius: 100%;
    background: #fff;
    box-shadow: 0 4rpx 6rpx 0 rgba(0,0,0,.16);
    border: 1rpx solid rgba(0,0,0,.07);
    transition: transform .3s;
    transition: transform .3s,-webkit-transform .3s;
    transform: translateX(0);
}

.switch-btn.active {
    background: #2d8cf0;
    border-color: #2d8cf0;
}

.switch-btn.active .circle {
    border-color: #fff;
    box-shadow: 0 4rpx 6rpx 0 rgba(0,87,179,.5);
    transform: translateX(28rpx);
}