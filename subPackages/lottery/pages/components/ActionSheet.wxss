.action-mark {
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,.65);
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2000;
}

.action-wrap {
    position: absolute;
    width: auto;
    left: 0;
    right: 0;
    bottom: 0;
    height: auto;
    overflow: hidden;
    background: #fff;
    border-radius: 8rpx 8rpx 0 0;
    text-align: center;
}

.action-title {
    font-weight: 700;
    line-height: 110rpx;
}

.action-item,.action-title {
    height: 110rpx;
    width: auto;
    margin: 0 40rpx;
    font-size: 32rpx;
    color: #303237;
}

.action-item {
    border-top: 1px solid #e2e4ea;
    font-weight: 400;
    display: flex;
    justify-content: center;
    align-items: center;
}

.action-cancle {
    border-top: 20rpx solid #f2f2f2;
    height: 110rpx;
    line-height: 110rpx;
    width: auto;
    font-size: 36rpx;
    font-weight: 700;
    color: #96989e;
}

.action-tag-wrap {
    display: inline-block;
    margin-left: 10rpx;
}

.action-tag {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 108rpx;
    height: 36rpx;
    background: linear-gradient(90deg,rgba(251,213,119,.38),rgba(249,160,43,.38));
    border-radius: 18rpx 28rpx 28rpx 0;
    font-size: 20rpx;
    font-weight: 400;
    color: #86520e;
    line-height: 36px;
}

.animated {
    animation-duration: .5s;
    animation-fill-mode: both;
}

@-webkit-keyframes slideInUp {
    from {
        transform: translate3d(0,100%,0);
        visibility: visible;
    }

    to {
        transform: translateZ(0);
    }
}

@keyframes slideInUp {
    from {
        transform: translate3d(0,100%,0);
        visibility: visible;
    }

    to {
        transform: translateZ(0);
    }
}

.slideInUp {
    animation-name: slideInUp;
}