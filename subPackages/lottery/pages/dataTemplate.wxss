.header-text {
    font-size: 22rpx;
    color: #96989e;
    line-height: 32rpx;
    margin: 40rpx 24rpx 0;
}

.download_item {
    margin-top: 30rpx;
    padding: 0 24rpx;
}

.download_item .download_item_content {
    display: flex;
    justify-content: space-between;
    margin-bottom: 40rpx;
    overflow: hidden;
}

.download_item .download_item_content .content_left {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
}

.download_item .download_item_content .content_left .preview-img {
    width: 190rpx;
    height: 220rpx;
    border-radius: 4rpx;
    border: 2rpx solid rgba(150,152,158,.2);
}

.download_item .download_item_content .content_right {
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-left: 30rpx;
}

.download_item .download_item_content .content_right .name {
    margin-top: 16rpx;
    font-size: 32rpx;
    color: #303237;
    line-height: 44rpx;
}

.download_item .download_item_content .content_right .text {
    margin-top: 16rpx;
    font-size: 24rpx;
    color: #ee3f4d;
    line-height: 34rpx;
}

.download_item .download_item_content .content_right .item_bottom {
    margin-top: 46rpx;
    display: flex;
    align-items: flex-end;
    justify-content: space-between;
}

.download_item .download_item_content .content_right .item_bottom .preview-img {
    font-size: 24rpx;
    color: #96989e;
    line-height: 34rpx;
}

.download_item .download_item_content .content_right .item_bottom .item_btn {
    width: 176rpx;
    height: 60rpx;
    background: #2d8cf0;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 28rpx;
}

.download_item .download_item_content .content_right .item_bottom .item_btn image {
    width: 32rpx;
    height: 32rpx;
    margin-right: 4rpx;
}

.download_item .download_item_content .content_right .item_bottom .item_btn text {
    font-size: 26rpx;
    color: #fff;
    line-height: 36rpx;
}

.permissions-settings {
    width: 606rpx;
    background: #fff;
    border-radius: 8rpx;
    text-align: center;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 5;
}

.permissions-settings .tips-content {
    padding-top: 54rpx;
    padding-bottom: 8rpx;
    line-height: 50rpx;
    z-index: 6;
}

.permissions-settings .text {
    line-height: 50rpx;
    padding-bottom: 48rpx;
    z-index: 6;
}

.permissions-settings .bottom-btn {
    border-top: 1rpx solid rgba(0,0,0,.1);
    height: 100rpx;
    line-height: 100rpx;
    align-items: center;
    overflow: hidden;
}

.permissions-settings .bottom-btn .cancle {
    text-align: center;
    width: 50%;
    float: left;
    border-right: 1rpx solid #e2e4ea;
    color: #606266;
    height: 100%;
    box-sizing: border-box;
}

.permissions-settings .bottom-btn .sure-btn {
    height: 100%;
    text-align: center;
    width: 50%;
    float: right;
    color: #2f8cef;
    background: transparent;
}

.hide-bg {
    background: rgba(0,0,0,.65);
    z-index: 2;
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
}