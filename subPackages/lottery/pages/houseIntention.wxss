.page {
    padding-bottom: 200rpx;
}

.orange-color {
    color: #eb744e!important;
}

.condition-option .option-unlimited {
    text-align: center;
    background: #fff;
    border-bottom: 10rpx solid #f7f7f7;
    overflow: hidden;
    height: 300rpx;
}

.condition-option .option-unlimited .title {
    padding: 60rpx 0 56rpx;
}

.condition-option .option-unlimited .text {
    padding-bottom: 34rpx;
}

.condition-option .option-unlimited .process-line {
    width: 540rpx;
    height: 10rpx;
    background: #eb744e;
    position: relative;
    display: inline-block;
    margin-bottom: 60rpx;
    border-radius: 10rpx;
}

.condition-option .option-unlimited .process-line .move-btn {
    width: 54rpx;
    height: 54rpx;
    line-height: 54rpx;
    border-radius: 54rpx;
    display: inline-block;
    text-align: center;
    position: absolute;
    border: 1rpx solid #eb744e;
    top: -20rpx;
    background: #fff;
}

.condition-option .option {
    padding: 0 30rpx;
    background: #fff;
    border-bottom: 10rpx solid #f7f7f7;
    overflow: hidden;
}

.condition-option .option .title {
    padding: 50rpx;
    text-align: center;
}

.condition-option .option .tags-list {
    padding-bottom: 10rpx;
}

.condition-option .option .tags-list .tag-txt {
    width: 160rpx;
    height: 48rpx;
    line-height: 46rpx;
    text-align: center;
    border-radius: 5rpx;
    margin-right: 16rpx;
    box-sizing: border-box;
    margin-bottom: 30rpx;
    display: inline-block;
}

.condition-option .option .tags-list .choosed {
    background: #eb744e;
    border: 1px solid #eb734e;
}

.condition-option .option .tags-list .not-choose {
    border: 1rpx solid #999;
}

.condition-option .option .tags-list>text:nth-child(4n+0) {
    margin-right: 0;
}

.submit {
    padding: 10rpx 30rpx;
    width: 100%;
    box-sizing: border-box;
    position: fixed;
    bottom: 0;
    box-shadow: 0 0 15rpx 0 rgba(0,0,0,.3);
    background: #fff;
}

.submit .btn {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 8rpx;
}

.des,.submit .btn,.top {
    text-align: center;
}

.zy-slider {
    position: relative;
    margin: 60rpx;
    top: -120rpx;
}