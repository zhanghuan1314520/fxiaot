.indexFixed {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

.page {
    background: #fff;
}

.card-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
    height: 360rpx;
    background: url(https://imgcdn.huanjutang.com/assets/img/2019991748208081.png) 50% no-repeat;
    background-size: 100% 100%;
    margin-top: 32rpx;
}

.card-container .name {
    margin-top: 44rpx;
    color: hsla(0,0%,100%,.47);
    line-height: 34rpx;
}

.card-container .number {
    margin-top: 20rpx;
    font-weight: 700;
    font-size: 80rpx;
    font-family: DINAlternate;
    line-height: 80rpx;
}

.card-container .rule {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    margin-top: 30rpx;
    line-height: 34rpx;
}

.card-container .rule>.iconnew {
    margin-left: 4rpx;
}

.card-container .get-gold {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    position: absolute;
    right: 44rpx;
    bottom: 100rpx;
    padding: 0 17rpx;
    height: 56rpx;
    border-radius: 29rpx;
    border: 2rpx solid #fff;
    line-height: 1;
}

.home-container,.project-container,.why-container {
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.home-container {
    margin-bottom: 26rpx;
    overflow: hidden;
    text-align: left;
}

.home-container .authorization__button {
    text-align: left;
    margin-top: 42rpx;
}

.home-container .auth-home-content,.home-container>.home-content {
    margin-top: 42rpx;
}

.project-container {
    margin-bottom: 50rpx;
    overflow: hidden;
}

.project-container .authorization__button {
    text-align: left;
}

.project-container>.common-title {
    margin-bottom: 42rpx;
}

.why-container,.why-container .why-content {
    overflow: hidden;
}

.why-container .icons-group {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    margin: 50rpx 0 38rpx;
    overflow: hidden;
}

.why-container .icons-group>.item {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: row;
    line-height: 32rpx;
    font-size: 28rpx;
    color: #303237;
}

.why-container .icons-group .icon {
    display: inline-block;
    width: 32rpx;
    margin-right: 8rpx;
    overflow: hidden;
}

.why-container .desc {
    line-height: 40rpx;
    font-weight: 400;
    margin-bottom: 84rpx;
}

.common-title {
    line-height: 50rpx;
    font-weight: 700;
}

.list-items {
    width: 100%;
    box-shadow: 0 4rpx 16rpx 0 rgba(11,96,210,.1);
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 32rpx 20rpx 24rpx 18rpx;
    margin-bottom: 30rpx;
    overflow: hidden;
}

.list-items>.top {
    width: 100%;
    overflow: hidden;
    position: relative;
}

.list-items>.top>.cover {
    float: left;
    width: 240rpx;
    height: 180rpx;
    border-radius: 4rpx;
}

.list-items>.top .main-tag {
    position: absolute;
    left: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 64rpx;
    height: 36rpx;
    background: #ff6908;
    border-radius: 8rpx 8rpx 8rpx 0rpx;
    font-size: 24rpx;
    font-weight: 700;
    color: #fff;
}

.list-items>.top>.right-info {
    margin-left: 266rpx;
}

.list-items .right-info>.title {
    margin-top: 10rpx;
    font-weight: 500;
    color: #333;
    line-height: 32rpx;
}

.list-items .right-info>.time {
    margin-top: 24rpx;
    line-height: 22rpx;
    color: #96989e;
}

.list-items .right-info>.time>text {
    color: #303237;
}

.list-items .right-info>.bidding {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    margin-top: 36rpx;
    color: #96989e;
}

.list-items .right-info>.bidding .gold {
    color: #ff7d4f;
    font-weight: 700;
}

.list-items .right-info>.bidding .bidding-btn {
    width: 140rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 29rpx;
    text-align: center;
}

.list-items .right-info>.bidding .bidding-btn.disable {
    color: #fff;
    background: rgba(150,152,158,.4);
}

.list-items .right-info>.bidding .bidding-btn.success {
    color: #2f8cef;
    background: rgba(47,140,239,.15);
}

.list-items .right-info>.bidding .bidding-btn.default {
    color: #fff;
    background: #2d8cf0;
}

.list-items>.bottom {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    flex-direction: row;
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
    border-radius: 4rpx;
    margin-top: 24rpx;
}

.list-items>.bottom.fail {
    color: #ee3f4d;
    background: rgba(238,63,77,.15);
}

.list-items>.bottom.success {
    color: #45b787;
    background: rgba(10,191,121,.15);
}

.list-items>.bottom>.iconnew {
    margin: 0 8rpx 0 16rpx;
}

.comment-box {
    max-height: 684rpx;
    box-sizing: border-box;
    line-height: 44rpx;
    color: rgba(0,0,0,.85);
}

.comment-box ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.comment-box .line {
    margin-bottom: 12rpx;
}