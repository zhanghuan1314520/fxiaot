.buys {
    position: relative;
    width: 100%;
    padding: 0 16rpx 32rpx;
}

.buys,.buys__content {
    box-sizing: border-box;
    overflow: hidden;
}

.buys__content {
    padding: 20rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 36rpx;
    border-radius: 4rpx;
    background: rgba(150,152,158,.1);
}

.buys__control {
    width: 302rpx;
    margin-top: 24rpx;
    margin-left: auto;
    margin-right: 0;
    background: #fff;
    border-radius: 10rpx;
    padding: 16rpx 0;
    overflow: hidden;
}

.buys__control--item {
    width: 100%;
    padding: 24rpx 0;
    font-size: 28rpx;
    font-weight: 400;
    line-height: 40rpx;
    text-align: center;
    color: #2d8cf0;
}