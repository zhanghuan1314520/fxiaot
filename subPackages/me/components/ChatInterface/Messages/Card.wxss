.card-message {
    position: relative;
    display: flex;
    width: 498rpx;
    border-radius: 10rpx;
    padding: 20rpx 8rpx 20rpx 16rpx;
    color: #fff;
    background: #fff;
    box-sizing: border-box;
}

.card-message.sender {
    float: right;
    right: 22rpx;
}

.card-message.receive {
    left: 22rpx;
    color: #606266;
    background: #fff;
}

.card-message__img {
    position: relative;
    display: block;
    width: 200rpx;
    height: 146rpx;
    border-radius: 4rpx;
    margin-right: 12rpx;
    overflow: hidden;
}

.card-message__content {
    width: 262rpx;
    overflow: hidden;
}

.card-message__content--name {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    color: #333;
    margin-bottom: 12rpx;
    font-size: 28rpx;
    font-weight: 700;
    line-height: 36rpx;
}

.card-message__content--address {
    color: #96989e;
    margin-bottom: 12rpx;
    height: 26rpx;
    white-space: nowrap;
}

.card-message__content--address,.card-message__content--price {
    line-height: 26rpx;
    font-size: 24rpx;
    text-overflow: ellipsis;
    overflow: hidden;
}

.card-message__content--price {
    color: #ee3f4d;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}