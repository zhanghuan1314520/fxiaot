.send-phone {
    background: #fff;
    border-radius: 10rpx;
    width: 498rpx;
    margin: 0 auto;
}

.send-phone__content {
    padding: 32rpx 24rpx;
}

.send-phone__content--icon {
    float: left;
    width: 80rpx;
    height: 80rpx;
    border-radius: 10rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 46rpx;
    color: #fff;
    background: #f6b157;
}

.send-phone__content .right {
    margin-left: 100rpx;
}

.send-phone__content .right__title {
    color: #96989e;
    font-size: 26rpx;
}

.send-phone__content .right__content {
    padding: 20rpx 0 0;
    line-height: 1;
    color: #333;
    font-weight: 700;
    font-size: 26rpx;
}

.send-phone__btns {
    display: flex;
    width: 100%;
    border-top: 1rpx solid rgba(48,55,64,.05);
    padding: 24rpx 0;
    font-size: 30rpx;
    box-sizing: border-box;
    overflow: hidden;
}

.send-phone__btns .copy {
    display: inline-block;
    width: 50%;
    border-right: 1rpx solid #e6e6e6;
    text-align: center;
    color: #606266;
}

.send-phone__btns .call {
    flex: 1;
    color: #2d8cf0;
    text-align: center;
}

.notify-message {
    position: relative;
    width: 100%;
    padding: 0 16rpx 32rpx;
    box-sizing: border-box;
    text-align: center;
    overflow: hidden;
}

.notify-message__content {
    padding: 20rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 36rpx;
    border-radius: 4rpx;
    background: rgba(150,152,158,.1);
    box-sizing: border-box;
    overflow: hidden;
}