.phrases {
    position: relative;
    z-index: 99;
    background: #f5f7fa;
}

.phrases__container {
    border-top: 1rpx solid #e6e6e6;
    height: 360rpx;
}

.phrases__container .empty {
    overflow: hidden;
    text-align: center;
}

.phrases__container .empty .image {
    margin-top: 30rpx;
    height: 188rpx;
    width: 336rpx;
}

.phrases__container .empty .text {
    height: 40rpx;
    line-height: 40rpx;
    margin-top: 26rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #b5b6bb;
    text-align: center;
}

.phrases__item {
    margin: 0 24rpx;
    padding: 28rpx 0rpx;
    line-height: 46rpx;
    border-bottom: 1rpx solid rgba(48,55,64,.05);
    color: #303237;
    font-size: 28rpx;
    overflow: hidden;
}

.phrases__item-reply {
    float: left;
    width: 108rpx;
    padding: 1rpx 0;
    height: 38rpx;
    margin-right: 8rpx;
    border-radius: 20rpx 20rpx 2rpx 20rpx;
    font-size: 20rpx;
    font-weight: 400;
    color: #86520e;
    text-align: center;
    background: linear-gradient(90deg,rgba(251,213,119,.38),rgba(249,160,43,.38));
}

.phrases__tools {
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    background: #fff;
    box-shadow: 0 -2rpx 4rpx 0 rgba(21,24,45,.05);
}

.phrases__tools .add {
    width: 540rpx;
    color: #2d8cf0;
    font-weight: 700;
}

.phrases__tools .add,.phrases__tools .edit {
    display: inline-block;
    height: 32rpx;
    line-height: 32rpx;
    margin-top: 28rpx;
    font-size: 32rpx;
}

.phrases__tools .edit {
    width: 200rpx;
    font-weight: 400;
    color: #23cd94;
    border-left: 1rpx solid rgba(48,55,64,.1);
}