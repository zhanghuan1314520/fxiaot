.dialog__content {
    width: 100%;
    background: #f5f7fa;
    border-radius: 8rpx;
    overflow: hidden;
}

.dialog__content .textarea {
    resize: none;
    width: 100%;
    height: 355rpx;
    padding: 20rpx;
    font-size: 28rpx;
    line-height: 44rpx;
    text-align: left;
    box-sizing: border-box;
    overflow-y: hidden;
}

.dialog__content .count {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    color: #96989e;
    font-size: 28rpx;
    text-align: right;
    padding-right: 20rpx;
    box-sizing: border-box;
}

.editor {
    height: 40rpx;
    width: auto;
    font-size: 24rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 40rpx;
    margin-top: 28rpx;
    display: flex;
}

.editor__reply {
    flex: 1;
}

.editor__reply .icon {
    float: left;
    margin-right: 4rpx;
    margin-top: 0;
    font-size: 40rpx;
}

.editor__time {
    flex: 1;
    text-align: right;
    margin-right: 40rpx;
}

.editor__time .value {
    display: inline-block;
    width: 70rpx;
    margin: 0 18rpx;
    font-size: 28rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    text-align: center;
}

.editor__time .image {
    vertical-align: middle;
    margin-top: -10rpx;
    height: 34rpx!important;
    width: 34rpx!important;
}