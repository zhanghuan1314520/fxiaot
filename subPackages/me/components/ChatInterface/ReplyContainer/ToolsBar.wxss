.tools {
    height: 82rpx;
    padding-left: 24rpx;
    background: #f5f7fa;
    overflow: hidden;
}

.tools__item {
    display: block;
    float: left;
    margin-top: 20rpx;
    padding: 0 20rpx;
    height: 56rpx;
    border-radius: 30rpx;
    border: 1rpx solid rgba(0,0,0,.15);
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(0,0,0,.85);
    line-height: 56rpx;
    margin-right: 16rpx;
}

.tools__item .icon {
    font-size: 26rpx;
    color: #2f8cef;
    margin-right: 8rpx;
}