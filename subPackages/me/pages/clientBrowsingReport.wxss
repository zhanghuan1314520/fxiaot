page {
    padding-bottom: 0;
}

.report {
    position: relative;
    width: 100%;
    height: 1624rpx;
    padding-bottom: env(safe-area-inset-bottom);
    background-image: url(https://imgcdn.huanjutang.com/file/2021/04/02/011fbfcbc2c502488d4f60c4d235f0df.png);
    background-size: cover;
    background-position: top;
    z-index: 300;
}

.title {
    margin-top: 36rpx;
    line-height: 48rpx;
    font-size: 52rpx;
    font-family: PingFangSC-Semibold,PingFang SC;
    font-weight: 700;
    color: #fff;
    text-align: center;
    text-shadow: 0rpx 4rpx 8rpx #1d3dab;
    letter-spacing: 4rpx;
}

.title .color-yellow {
    color: #fbda30;
}

.date {
    margin: 36rpx auto 0;
    width: 386rpx;
    line-height: 56rpx;
    border-radius: 28rpx;
    text-align: center;
    color: #02226c;
    font-size: 28rpx;
    background: #fbda30;
}

.character {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 250rpx;
    height: 372rpx;
}

.report-main {
    position: relative;
    margin: 82rpx 34rpx 0;
    padding: 6rpx;
    background: linear-gradient(180deg,#728ceb,#3a5ee4);
    border-radius: 12rpx;
}

.report-main .report-main-bg {
    padding: 24rpx;
    border-radius: 10rpx;
    background: #385ee4;
}

.report-main .buildings {
    position: absolute;
    right: 48rpx;
    top: -104rpx;
    width: 156rpx;
    height: 104rpx;
}

.report-list {
    padding: 32rpx 28rpx 32rpx 60rpx;
    background: #fff;
    border-radius: 12rpx;
    background-repeat: no-repeat;
    background-position: 100% 100%;
    background-image: url(https://imgcdn.huanjutang.com/file/2021/03/22/cec4a9920bc8dda782ecc0d5c44e08f4.png);
    background-size: 140rpx 140rpx;
}

.report-list.area {
    margin-top: 18rpx;
    background-image: url(https://imgcdn.huanjutang.com/file/2021/03/22/1a72216da60946c30a5bb8a9e6d43607.png);
    background-size: 194rpx 238rpx;
}

.report-list.sales {
    margin-top: 20rpx;
    background-image: url(https://imgcdn.huanjutang.com/file/2021/03/22/4e6d52d6a8f2621971ec5ade9d58eeac.png);
    background-size: 128rpx 140rpx;
}

.report-item {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 40rpx;
}

.report-item::before {
    content: "";
    position: absolute;
    top: 14rpx;
    left: -30rpx;
    width: 12rpx;
    height: 12rpx;
    background: #395ee4;
    border-radius: 4rpx;
    transform: rotate(45deg);
}

.report-item.area {
    display: block;
    height: auto;
}

.report-item+.report-item {
    margin-top: 20rpx;
}

.report-item .label {
    font-size: 28rpx;
    color: rgba(0,0,0,.85);
    line-height: 40rpx;
}

.report-item .value {
    font-size: 36rpx;
    font-weight: 700;
    color: #e35649;
    line-height: 48rpx;
}

.report-item .area-box .area-item {
    margin-top: 28rpx;
    display: flex;
    align-items: center;
}

.report-item .area-box .icon {
    margin-right: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.report-item .area-box .area-value {
    font-size: 28rpx;
    color: rgba(0,0,0,.85);
    line-height: 28rpx;
}