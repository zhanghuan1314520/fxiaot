.wrap {
    height: 98rpx;
}

.total {
    top: 128rpx;
    left: 0;
    z-index: 2;
    padding: 20rpx 32rpx 38rpx;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.total .num,.total .view {
    height: 40rpx;
}

.total .num {
    margin-left: 12rpx;
    font-size: 48rpx;
    font-family: DINAlternate-Bold,DINAlternate;
    font-weight: 700;
    color: #ffef7f;
    line-height: 40rpx;
}

.total .common {
    font-size: 28rpx;
    font-weight: 700;
    color: #fff;
    line-height: 28rpx;
}

.total .important {
    font-size: 24rpx;
    color: hsla(0,0%,100%,.8);
    line-height: 28rpx;
}

.total .right {
    display: flex;
    height: 38rpx;
}