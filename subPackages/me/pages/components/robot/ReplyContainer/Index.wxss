.reply__container {
    position: relative;
    z-index: 2;
    padding: 14rpx 24rpx;
    background: #f5f7fa;
}

.reply__container--input {
    padding: 8rpx;
    border: 2rpx solid #f2f2f2;
    border-radius: 10rpx;
    background: #fff;
}

.reply__container--input .input {
    position: relative;
    display: block;
    width: auto;
    height: 72rpx;
    line-height: 72rpx;
    margin-left: 10rpx;
    font-size: 28rpx;
    border: none;
    background: hsla(0,0%,100%,.8);
}

.reply__container--associate {
    border: 2rpx solid #f2f2f2;
    border-radius: 10rpx;
    background: #fff;
    position: absolute;
    bottom: 95%;
}

.reply__container--associate .list-item {
    width: 168rpx;
    padding: 0rpx 24rpx;
    height: 70rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.85);
    line-height: 70rpx;
}

.reply__container--associate .list-item:not(:last-child) {
    border-bottom: 1rpx solid #eee;
}