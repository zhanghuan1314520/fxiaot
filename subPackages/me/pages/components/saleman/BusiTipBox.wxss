.busi-tip-box__wrap {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    background: rgba(0,0,0,.7);
}

.busi-tip-box__wrap .tip-container {
    width: 606rpx;
    min-height: 354rpx;
    background: #fff;
    border-radius: 8rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.busi-tip-box__wrap .tip-tit {
    width: 100%;
    flex: 1;
    padding: 60rpx 48rpx 50rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid rgba(0,0,0,.1);
}

.busi-tip-box__wrap .tip-tit view {
    color: rgba(0,0,0,.85);
    line-height: 48rpx;
}

.busi-tip-box__wrap .tip-btn {
    height: 100rpx;
    width: 100%;
}

.busi-tip-box__wrap .tip-btn .btn-item {
    line-height: 100rpx;
    text-align: center;
    font-weight: 700;
    width: 50%;
    height: 100%;
}

.busi-tip-box__wrap .tip-btn .cancel {
    color: rgba(0,0,0,.65);
    border-right: 2rpx solid rgba(0,0,0,.1);
    box-sizing: border-box;
}

.busi-tip-box__wrap .tip-btn .submit {
    color: #2d8cf0;
}