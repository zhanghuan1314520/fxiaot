.activity-rank-wrap {
    margin: 24rpx 32rpx 0;
    height: 174rpx;
}

.activity-rank,.activity-rank-wrap {
    position: relative;
    box-sizing: border-box;
    border-radius: 16rpx;
}

.activity-rank {
    padding: 0 40rpx;
    z-index: 2;
    background: linear-gradient(180deg,hsla(0,0%,100%,.86),hsla(0,0%,100%,.85));
    box-shadow: 0rpx 14rpx 28rpx 0rpx rgba(17,33,91,.06);
}

.filter {
    position: absolute;
    width: 100%;
    height: 100%;
    filter: blur(10rpx);
    z-index: 1;
}

.rank-info {
    position: relative;
    padding: 34rpx 0 32rpx;
}

.rank-info .project {
    display: flex;
    align-items: center;
    height: 34rpx;
}

.rank-info .project-name {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    max-width: 480rpx;
    font-weight: 700;
    font-size: 34rpx;
    line-height: 34rpx;
    color: rgba(0,0,0,.85);
}

.rank-info .project-tag {
    margin-left: 16rpx;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64rpx;
    height: 32rpx;
    background: #2d8cf0;
    border-radius: 4rpx;
    font-size: 24rpx;
    font-weight: 700;
    color: #fff;
}

.rank-info .tip {
    margin-top: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 26rpx;
}

.rank-info .tip .text {
    font-size: 26rpx;
    color: rgba(0,0,0,.65);
    line-height: 26rpx;
}

.rank-info .tip .iconnew {
    position: relative;
    left: 4rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.45);
}

.rank {
    position: relative;
    padding: 24rpx 0 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    border-top: 1rpx solid rgba(0,0,0,.07);
}

.rank .label {
    margin-top: 20rpx;
    font-size: 24rpx;
    color: #a37552;
    height: 24rpx;
    display: flex;
    align-items: center;
}

.rank .label .icon {
    margin-right: 12rpx;
    margin-bottom: 8rpx;
    width: 124rpx;
    height: 46rpx;
}

.rank .label .text {
    margin-bottom: 6rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.85);
    line-height: 28rpx;
}

.rank .label .num {
    margin: 0 8rpx;
    font-size: 36rpx;
    font-weight: 700;
    color: #2d8cf0;
    line-height: 28rpx;
}

.rank .iconnew {
    position: relative;
    left: 4rpx;
    margin-bottom: 2rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.45);
}