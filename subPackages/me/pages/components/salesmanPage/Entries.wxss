.entries,.entries .data-item {
    position: relative;
    display: flex;
}

.entries .data-item {
    flex: 1;
    flex-direction: column;
    align-items: center;
}

.entries .item-text {
    margin-top: 20rpx;
    padding-bottom: 38rpx;
    box-sizing: border-box;
    position: relative;
    font-size: 26rpx;
    color: rgba(0,0,0,.65);
    font-family: PingFangSC-Regular,PingFang SC;
    line-height: 32rpx;
    text-align: center;
}

.entries .item-img {
    position: relative;
    margin-top: 34rpx;
}

.entries .item-img,.entries .item-img .img {
    width: 64rpx;
    height: 64rpx;
}

.entries .item-img .add {
    position: absolute;
    padding: 0 8rpx;
    top: 0;
    right: 42rpx;
    height: 30rpx;
    line-height: 30rpx;
    border-radius: 15px;
    background: #f03c50;
    color: #fff;
    font-weight: 700;
    text-align: center;
    white-space: nowrap;
    font-size: 20rpx;
    transform: translateX(calc(100% + 8rpx));
}