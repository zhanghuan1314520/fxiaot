.surprise-modal {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.25);
    z-index: 300;
}

.surprise-modal .suprise {
    position: relative;
}

.surprise-modal .image {
    width: 750rpx;
    height: 934rpx;
}

.surprise-modal .close {
    position: absolute;
    width: 262rpx;
    height: 262rpx;
    top: 140rpx;
    right: 128rpx;
}