page {
    background: #fff;
}

.page,page {
    height: 100%;
}

.page {
    position: relative;
    z-index: 2;
}

.page .tab-bar {
    height: 100rpx;
    background: #fff;
    border-bottom: 2rpx solid rgba(48,55,64,.05);
    overflow: hidden;
    position: fixed;
    top: 0;
    width: 100%;
    z-index: 3;
}

.page .tab-bar .tabname {
    position: relative;
    display: block;
    float: left;
    line-height: 100rpx;
    margin: 0 30rpx;
    font-size: 32rpx;
    color: rgba(0,0,0,.85);
    overflow: hidden;
}

.page .tab-bar .tabname:after {
    position: absolute;
    left: 50%;
    bottom: 0;
    content: "";
    width: 0rpx;
    height: 6rpx;
    border-radius: 6rpx;
    background: #2f8cef;
    transform: translateX(-50%);
    transition: width .2s;
}

.page .tab-bar .tabname.active {
    font-size: 40rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
}

.page .tab-bar .tabname.active:after {
    width: 40rpx;
}

.fixed-bg {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: -1;
    background: #fff;
}

.fixed-bg.active {
    background: #f5f5f5;
}