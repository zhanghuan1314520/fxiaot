page {
    position: relative;
}

.page {
    padding: 0 24rpx;
    box-sizing: border-box;
    overflow: hidden;
    color: #96989e;
    margin-bottom: 120rpx;
}

.h1,.page {
    font-weight: 500;
}

.h1 {
    color: #303237;
    margin-top: 30rpx;
}

.h2 {
    font-weight: 400;
    margin-top: 14rpx;
    color: #96989e;
}

.title {
    display: inline-block;
    line-height: 1;
    color: #2d8cf0;
    margin: 24rpx 0 26rpx;
}

.title::after {
    display: block;
    content: "";
    width: 100%;
    height: 8rpx;
    margin-top: -5rpx;
    background: rgba(45,140,240,.3);
    border-radius: 4rpx;
}

.bottom-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    padding: 34rpx 0;
    text-align: center;
    font-size: 32rpx;
    font-weight: 400;
    color: #2d8cf0;
    background: hsla(0,0%,100%,.95);
    box-shadow: 0 -4rpx 12rpx 0 rgba(21,24,45,.03);
    font-weight: 700;
}

.bulding-col {
    background: #fff;
    box-shadow: 0 2rpx 10rpx 0 rgba(11,96,210,.1);
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    padding: 34rpx 24rpx 30rpx;
    box-sizing: border-box;
    margin-bottom: 20rpx;
}

.bulding-col .item-left {
    flex: 1;
}

.bulding-col .item-left .name {
    font-size: 30rpx;
    font-weight: 700;
    color: #303237;
    min-height: 36rpx;
}

.bulding-col .item-left .tips {
    width: 108rpx;
    background: linear-gradient(90deg,rgba(251,213,119,.38),rgba(249,160,43,.38));
    border-radius: 28rpx 28rpx 28rpx 0;
    font-size: 20rpx;
    font-weight: 400;
    color: #86520e;
    text-align: center;
    padding: 5rpx 0;
    position: relative;
    top: -6rpx;
    display: inline-block;
}

.bulding-col .item-left .rank {
    font-size: 24rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 30rpx;
    margin-top: 24rpx;
}

.bulding-col .radio {
    width: 40rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f2f2f2;
    border-radius: 100%;
    border: 2rpx solid rgba(150,152,158,.6);
}

.bulding-col .radio .cicle {
    width: 16rpx;
    height: 16rpx;
    border-radius: 100%;
    background: #fff;
    display: none;
}

.bulding-col .radio.selected {
    background: #2d8cf0;
    border: 2rpx solid #2d8cf0;
}

.bulding-col .radio.selected .cicle {
    display: block;
}