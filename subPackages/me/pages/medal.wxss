page {
    background-color: #f2f2f2;
}

.top {
    padding-bottom: 228rpx;
    background-image: url(https://imgcdn.huanjutang.com/image/2021/02/24/d091c5df53388caf7ccf524f524ca40a.png);
    background-size: cover;
    background-position: bottom;
}

.main {
    margin-top: -228rpx;
}

.info {
    margin-top: 64rpx;
    padding: 0 40rpx;
    display: flex;
    justify-content: space-between;
}

.info .avatar {
    width: 176rpx;
    height: 176rpx;
    border: 10rpx solid hsla(0,0%,100%,.1);
    border-radius: 92rpx;
}

.info .right {
    margin-top: 52rpx;
    text-align: right;
}

.info .right .name {
    min-width: 300rpx;
    font-size: 64rpx;
    font-weight: 700;
    color: #fff;
    line-height: 52rpx;
    height: 52rpx;
}

.info .right .desc {
    margin-top: 40rpx;
    font-size: 28rpx;
    color: #fff;
    line-height: 28rpx;
    height: 28rpx;
}

.info .right .num {
    margin: 0 12rpx;
    color: #ffef7f;
}

.medal-list {
    padding: 34rpx 36rpx 0;
}

.medal-item {
    position: relative;
    margin-top: 28rpx;
    padding: 30rpx 24rpx;
    display: flex;
    align-items: center;
    background-color: #fff;
    border-radius: 12rpx;
    box-sizing: border-box;
}

.medal-item.border {
    border: 2rpx solid rgba(45,140,240,.8);
}

.medal-item .logo {
    margin-right: 20rpx;
    width: 140rpx;
    height: 140rpx;
}

.medal-item .name-box .name {
    font-size: 36rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 52rpx;
}

.medal-item .name-box .desc {
    margin-top: 8rpx;
    font-size: 26rpx;
    color: rgba(0,0,0,.65);
    line-height: 32rpx;
    height: 32rpx;
}