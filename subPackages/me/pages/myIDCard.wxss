.content {
    box-sizing: border-box;
    padding: 0 32rpx;
}

.content .content-box {
    padding: 40rpx 0;
    border-bottom: 1rpx solid rgba(0,0,0,.07);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.content .content-box .firstname {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    background: linear-gradient(204deg,#e8e9f2,#a9aab9);
    color: #fff;
    font-size: 36rpx;
    text-align: center;
    line-height: 80rpx;
}

.content .content-box .self-info {
    margin-left: 28rpx;
    flex: 1;
}

.content .content-box .self-info .name {
    color: rgba(0,0,0,.85);
    font-size: 36rpx;
    font-weight: 700;
    line-height: 48rpx;
}

.content .content-box .self-info .name .phone {
    margin-left: 16rpx;
    color: rgba(0,0,0,.65);
    font-size: 28rpx;
    font-weight: 400;
    margin-top: 8rpx;
}

.content .content-box .self-info .idcard {
    color: rgba(0,0,0,.45);
    font-size: 26rpx;
    margin-top: 12rpx;
}

.content .content-box .right-operations {
    display: flex;
    align-items: center;
    line-height: 40rpx;
}

.content .content-box .right-operations .line-split {
    width: 1rpx;
    background: rgba(0,0,0,.1);
    height: 28rpx;
    display: inline-block;
}

.content .content-box .right-operations>.iconnew {
    color: rgba(0,0,0,.65);
    opacity: .61;
}

.content .content-box .right-operations>.iconnew.new-shanchu {
    margin: 0 28rpx 0 32rpx;
}

.no-content {
    position: fixed;
    width: 100%;
    top: 50%;
    transform: translateY(-50%);
    text-align: center;
}

.no-content image {
    width: 394rpx;
    margin-bottom: 40rpx;
    height: 270rpx;
}

.no-content .no-result {
    color: rgba(0,0,0,.85);
    font-size: 36rpx;
    margin-bottom: 22rpx;
    line-height: 48rpx;
    font-weight: 700;
}

.no-content .add-user-tips {
    color: rgba(0,0,0,.45);
    font-size: 28rpx;
}

.bottom-btns {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    padding-bottom: env(safe-area-inset-bottom);
}

.bottom-btns .button-add-user {
    background: #fff;
    box-shadow: 0 -4rpx 12rpx 0 rgba(0,0,0,.03);
    height: 144rpx;
    margin: 0 32rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
}

.bottom-btns .button-add-user .button {
    width: 100%;
    height: 100rpx;
    background: #2d8cf0;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    color: #fff;
    font-size: 32rpx;
}

.notice {
    padding: 0 22rpx 0 30rpx;
    color: #b5b6bb;
    overflow: hidden;
}