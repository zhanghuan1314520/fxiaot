.page {
    margin-bottom: 152rpx;
}

.top-image {
    width: 100%;
    height: 266rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}

.top-message {
    margin: 30rpx 24rpx 0;
    border-radius: 20rpx;
    box-shadow: 0 6rpx 18rpx 0 rgba(11,96,210,.1);
    overflow: hidden;
    padding: 0 0 38rpx;
    z-index: 2;
    position: relative;
}

.liner-image {
    line-height: 58rpx;
    height: 56rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: #fa9840;
    position: relative;
    top: 20rpx;
    padding-left: 24rpx;
}

.liner-image image {
    width: 284rpx;
    height: 56rpx;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
}

.mainContent {
    overflow: hidden;
    display: flex;
    align-items: center;
    margin-top: 34rpx;
}

.line {
    width: 2rpx;
    height: 24rpx;
    background: #d8d8d8;
}

.content-col {
    flex: 1;
    margin-left: 56rpx;
}

.content-col .down {
    color: #45b787;
}

.content-col .h1 {
    font-size: 52rpx;
    font-weight: 500;
    color: #303237;
    height: 74rpx;
    line-height: 74rpx;
    display: flex;
    align-items: center;
}

.content-col .h1>text {
    color: #d8d8d8;
    margin-left: 14rpx;
}

.content-col .h2 {
    font-size: 24rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 34rpx;
}

.content-col .h3 {
    font-size: 26rpx;
    font-weight: 400;
    color: #96989e;
    margin-top: 30rpx;
}

.advice {
    margin: 36rpx 24rpx 40rpx;
    overflow: hidden;
}

.advice .warning {
    float: right;
    color: #2d8cf0;
}

.advice .warning text {
    color: #2d8cf0;
    margin-right: 6rpx;
}

.advice .bottom {
    font-weight: 400;
    color: #96989e;
    margin: 16rpx 0 0;
}

.rise {
    color: #ee3f4d;
}

.point-col {
    overflow: hidden;
    background: #fff;
    box-shadow: 0 4rpx 16px 0 rgba(11,96,210,.1);
    border-radius: 10rpx;
    margin: 20rpx 24rpx 0;
    position: relative;
}

.point-col .left-image {
    margin-top: 22rpx;
    width: 164rpx;
    float: left;
    height: 170rpx;
}

.point-col .point-right {
    margin-left: 196rpx;
}

.point-col .point-right .h1 {
    margin-top: 34rpx;
}

.point-col .point-right .h2,.point-col .point-right .h3 {
    margin-top: 12rpx;
    color: #96989e;
}

.point-col .point-right .h3 {
    margin: 10rpx 0 0;
    color: #96989e;
}

.point-col .clickArea {
    position: absolute;
    top: 0;
    right: 0;
    width: 148rpx;
    height: 70rpx;
}

.point-col .tips {
    position: absolute;
    top: 0;
    right: 0;
    width: 128rpx;
    height: 50rpx;
    font-size: 24rpx;
    color: #ee3f4d;
    line-height: 54rpx;
    text-align: center;
}

.point-col .tips image {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
}

.point-col .tips .iconnew {
    position: relative;
    top: -2rpx;
}

button {
    line-height: normal;
    font-size: inherit;
    text-align: left;
    border-radius: inherit;
    overflow: visible;
}

.button-hover,button {
    background-color: transparent;
}

.button-hover {
    color: rgba(0,0,0,.6);
}

.project-info .box-cont {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    border-top-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
    background: #f2f2f2;
    transition: all .4s ease-in-out;
    z-index: 4;
}

.project-info .box-cont .main-project {
    border-top-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.project-info .box-cont .main-project .item {
    margin: 0 40rpx;
    line-height: 110rpx;
    text-align: center;
    border-bottom: 1rpx solid #e2e4ea;
}

.project-info .box-cont .main-project .item:last-child {
    border-bottom: none;
}

.project-info .cancle-btn {
    line-height: 110rpx;
    text-align: center;
    background: #fff;
}

.project-info .hide-bg {
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.65);
    width: 100%;
    height: 100%;
    z-index: 3;
}