.list-item {
    box-sizing: border-box;
    padding: 0 32rpx;
    height: 112rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.list-item.large {
    height: 152rpx;
}

.list-item>text {
    color: rgba(0,0,0,.85);
    font-size: 30rpx;
    line-height: 40rpx;
}

.item-right {
    display: flex;
    align-items: center;
}

.item-right image {
    width: 104rpx;
    height: 104rpx;
    border-radius: 50%;
}

.item-right text:first-child {
    font-size: 30rpx;
    line-height: 40rpx;
    color: rgba(0,0,0,.45);
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.item-right .iconnew {
    margin-left: 14rpx;
    color: #d8d8d8;
    font-size: 30rpx;
}

.cropper-view {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #000;
    z-index: 2;
}