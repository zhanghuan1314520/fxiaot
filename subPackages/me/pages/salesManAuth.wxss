.color-045 {
    color: rgba(0,0,0,.45);
    font-weight: 400;
}

.busi-component__wrapper {
    width: 100vw;
    background: #fff;
    border-radius: 24rpx 24rpx 0rpx 0rpx;
    padding: 60rpx 48rpx 0;
    box-sizing: border-box;
    position: relative;
    margin-top: -40rpx;
    z-index: 20;
}

.form .label {
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 44rpx;
    height: 44rpx;
}

.form .content {
    position: relative;
}

.form .input-item,.form .placeholder-input-item {
    width: 654rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    line-height: 104rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    font-weight: 400;
    height: 104rpx;
    box-sizing: border-box;
}

.form .input-item {
    color: rgba(0,0,0,.65);
    padding-left: 32rpx;
}

.form .placeholder-input-item {
    color: rgba(0,0,0,.45);
}

.form .item-form+.item-form {
    margin-top: 48rpx;
}

.form .item-btn {
    width: 686rpx;
    height: 100rpx;
    background: #2d8cf0;
    border-radius: 8rpx;
    line-height: 100rpx;
    font-weight: bolder;
    color: #fff;
    text-align: center;
    margin-left: -16rpx;
}

.form .blue-color {
    color: #2d8cf0;
    font-weight: 400;
}

.form .upload-pic {
    width: 220rpx;
    height: 220rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    text-align: center;
}

.form .upload-pic .txt {
    height: 36rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    line-height: 36rpx;
}

.form .upload-pic .icon-upload {
    color: #d9d9d9;
}

.form .icon-position {
    color: #d9d9d9;
    position: absolute;
    right: 22rpx;
}

.form .gary {
    width: 686rpx;
    height: 100rpx;
    position: relative;
}

.form .gary:after {
    content: "";
    position: absolute;
    background: hsla(0,0%,100%,.7)!important;
    top: 0;
    left: 0;
    width: 686rpx;
    height: 100rpx;
    border-radius: 8rpx;
    z-index: 2;
}

.form .is-agree-box {
    margin-top: 16rpx;
    text-align: center;
    margin-bottom: 100rpx;
}

.form .is-agree-box .tit {
    color: rgba(0,0,0,.45);
    line-height: 44rpx;
}

.form .is-agree-box .tit-blue {
    font-weight: 700;
    color: #0d78f7;
    line-height: 44rpx;
}

.form .img-box {
    width: 220rpx;
    height: 220rpx;
    border-radius: 8rpx;
    position: relative;
}

.form .img-box .img {
    width: 100%;
    height: 100%;
}

.form .img-box .icon-img-position {
    position: absolute;
    top: -16rpx;
    right: -16rpx;
    color: #f03c50;
    width: 33rpx;
    height: 33rpx;
}

.img {
    width: 100vw;
    height: 518rpx;
}

.mar-bottom-32 {
    margin-bottom: 32rpx;
}

.mar-top-100 {
    margin-top: 100rpx;
}