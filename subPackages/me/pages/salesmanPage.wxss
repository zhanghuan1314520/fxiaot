.salesman-top {
    z-index: 300;
    position: relative;
    background-image: url(https://imgcdn.huanjutang.com/image/2021/02/22/32fe55fc8314327933c6f82e59e3e9f8.png);
    background-size: cover;
    background-position: bottom;
    margin-bottom: 90rpx;
}

.bg-gradient {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 200rpx;
    background: linear-gradient(180deg,rgba(0,41,99,0),hsla(0,0%,100%,.2) 40%,#fefefe);
}

.advertising {
    padding: 24rpx 32rpx 40rpx;
    box-sizing: border-box;
}