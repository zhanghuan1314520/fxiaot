page {
    background-color: #fff;
}

.b-none {
    border: 0!important;
}

.list,.list-item {
    height: auto;
    width: auto;
    overflow: hidden;
}

.list-item {
    display: flex;
}

.list-item .head-img {
    height: 144rpx;
    width: 88rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-left: 32rpx;
    margin-right: 24rpx;
}

.list-item .head-img image {
    width: 88rpx;
    height: 88rpx;
    border-radius: 50%;
}

.list-item .info {
    flex: 1;
    width: auto;
    height: 144rpx;
    border-bottom: 1rpx solid #eee;
    display: flex;
}

.list-item .info .info-left {
    flex: 1;
    width: 420rpx;
    margin-right: 26rpx;
}

.list-item .info .info-left .name {
    height: 44rpx;
    font-size: 34rpx;
    color: rgba(0,0,0,.85);
    line-height: 44rpx;
    margin-bottom: 8rpx;
    margin-top: 30rpx;
}

.list-item .info .info-left .name,.list-item .info .info-left .text {
    width: auto;
    font-weight: 400;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list-item .info .info-left .text {
    height: 36rpx;
    font-size: 28rpx;
    color: rgba(0,0,0,.45);
    line-height: 36rpx;
}

.list-item .info .btn {
    width: 128rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 32rpx;
    border: 2rpx solid rgba(0,0,0,.1);
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    text-align: center;
    margin-top: 47rpx;
    margin-right: 32rpx;
}

.list-item .info .on {
    border-color: #2d8cf0!important;
    color: #2d8cf0!important;
    background: transparent;
}