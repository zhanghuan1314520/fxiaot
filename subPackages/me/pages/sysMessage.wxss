.empty-data {
    height: auto;
    width: auto;
    overflow: hidden;
    text-align: center;
    margin-top: 320rpx;
}

.empty-data .img {
    width: 322rpx;
    height: 190rpx;
}

.empty-data .text {
    width: auto;
    height: 40rpx;
    font-size: 32rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    line-height: 40rpx;
    margin-top: 54rpx;
}

page {
    background-color: #f2f2f2;
}

.answer-cont {
    padding: 44rpx 32rpx 30rpx;
}

.answer-cont .time {
    width: auto;
    height: 36rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    line-height: 36rpx;
    text-align: center;
    margin-bottom: 20rpx;
}

.answer-cont .postCard {
    margin-bottom: 40rpx;
    background: #fff;
    border-radius: 8rpx;
    padding: 28rpx;
}

.answer-cont .postCard .title {
    line-height: 44rpx;
}

.answer-cont .postCard .detail_info {
    margin-top: 16rpx;
    line-height: 36rpx;
}

.answer-cont .postCard .href-cont {
    margin-top: 22rpx;
    overflow: hidden;
}

.answer-cont .postCard .href-cont .left {
    float: left;
    width: 130rpx;
    height: 120rpx;
    border-radius: 8rpx;
}

.answer-cont .postCard .href-cont .right {
    margin-left: 150rpx;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
}

.answer-cont .postCard-look-btn {
    background: #fff;
    border-radius: 8rpx;
    margin-bottom: 40rpx;
}

.answer-cont .postCard-look-btn .post-img {
    width: 100%;
    height: 340rpx;
    border-radius: 8rpx 8rpx 0 0;
}

.answer-cont .postCard-look-btn .title {
    padding: 28rpx;
    line-height: 44rpx;
}

.answer-cont .postCard-look-btn .title-text {
    padding: 28rpx 28rpx 12rpx;
}

.answer-cont .postCard-look-btn .title-url {
    padding-bottom: 34rpx;
}

.answer-cont .postCard-look-btn .content {
    margin: 0 28rpx;
    padding-bottom: 36rpx;
    color: #96989e;
}

.answer-cont .postCard-look-btn .lookFor {
    padding: 0 28rpx;
    color: #2d8cf0;
    border-top: 1rpx solid rgba(21,24,45,.05);
    height: 84rpx;
    line-height: 84rpx;
}

.answer-cont .postCard-look-btn .lookFor .right {
    float: right;
}

.answer-cont .postCard-look-btn .lookFor .left {
    float: left;
}

.answer-cont .system-message {
    background: #fff;
    border-radius: 12rpx;
    margin-bottom: 52rpx;
    padding: 32rpx;
}

.answer-cont .system-message .message-title {
    width: auto;
    height: 48rpx;
    font-size: 34rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 48rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.answer-cont .system-message .message-content {
    margin-top: 20rpx;
    width: auto;
    height: 40rpx;
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.answer-cont .system-message .message-btns {
    height: auto;
    margin-top: 32rpx;
    padding-top: 24rpx;
    width: auto;
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(0,0,0,.85);
    line-height: 40rpx;
    border-top: 1px solid rgba(0,0,0,.07);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.answer-cont .system-message .message-btns .iconnew {
    color: rgba(0,0,0,.25)!important;
    font-size: 24rpx!important;
}