.task-total {
    height: 216rpx;
    background: #2d8cf0;
    box-sizing: border-box;
    padding: 0 30rpx;
    position: relative;
    display: flex;
}

.task-total>view image {
    width: 20rpx;
    height: 20rpx;
    position: relative;
    top: 2rpx;
}

.task-total .task-total__activity,.task-total .task-total__score {
    flex: 1;
    margin-top: 40rpx;
}

.task-total .task-total__activity .fz-13,.task-total .task-total__score .fz-13 {
    color: hsla(0,0%,100%,.8);
    margin-left: 12rpx;
    vertical-align: bottom;
}

.task-total .task-total__line {
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    top: 64rpx;
    width: 2rpx;
    height: 24rpx;
    background: hsla(0,0%,100%,.4);
}

.task-total .task-total__activity {
    padding-left: 120rpx;
    box-sizing: border-box;
}

.task-list {
    background: #fff;
    position: relative;
    box-sizing: border-box;
    padding: 0rpx 32rpx;
}

.task-list__title {
    padding-bottom: 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid rgba(48,55,64,.05);
}

.task-list__title .left {
    font-size: 32rpx;
    font-weight: 700;
    color: #333;
    line-height: 44rpx;
}

.task-list__title .right {
    font-size: 24rpx;
    color: #96989e;
    line-height: 34rpx;
}

.project-info .box-cont {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    border-top-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
    background: #f2f2f2;
    transition: all .4s ease-in-out;
    z-index: 4;
}

.project-info .box-cont .main-project {
    border-top-right-radius: 8rpx;
    border-top-left-radius: 8rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.project-info .box-cont .main-project .item {
    margin: 0 40rpx;
    line-height: 110rpx;
    text-align: center;
    border-bottom: 1rpx solid #e2e4ea;
}

.project-info .box-cont .main-project .item:last-child {
    border-bottom: none;
}

.project-info .cancle-btn {
    line-height: 110rpx;
    text-align: center;
    background: #fff;
}

.project-info .hide-bg {
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0,0,0,.65);
    width: 100%;
    height: 100%;
    z-index: 3;
}

.top {
    padding-bottom: 160rpx;
    background-image: url(https://imgcdn.huanjutang.com/file/2020/12/24/dcff9ac18e69519fbf7b9b4baceae530.png);
    background-size: cover;
    background-position: bottom;
}