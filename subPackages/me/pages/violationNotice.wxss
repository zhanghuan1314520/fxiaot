page {
    background-color: #fff;
}

.mt-32 {
    margin-top: 64rpx;
}

.message {
    height: auto;
    min-height: 100vh;
    width: auto;
    overflow: hidden;
    position: relative;
}

.message .message-header {
    height: auto;
    padding: 32rpx 24rpx;
    width: auto;
    font-size: 30rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 40rpx;
    border-bottom: 16rpx solid #f7f7f7;
}

.message .message-content {
    height: auto;
    width: auto;
    overflow: hidden;
    padding: 28rpx 0rpx 420rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: rgba(0,0,0,.85);
    line-height: 44rpx;
}

.message .message-content .text {
    margin: 0 32rpx;
}

.message .message-content .line {
    width: auto;
    height: 16rpx;
    background: #f7f7f7;
}

.message .message-content .reason-tips {
    width: auto;
    height: 36rpx;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    line-height: 36rpx;
    margin-left: 32rpx;
    margin-bottom: 12rpx;
}

.message .message-content .info {
    height: auto;
    width: auto;
    overflow: hidden;
    margin: 0 32rpx;
}

.message .message-content .info .info-item {
    height: auto;
    width: auto;
    overflow: hidden;
    border-bottom: 1rpx solid rgba(0,0,0,.07);
    display: flex;
    padding: 28rpx 0;
    line-height: 36rpx;
}

.message .message-content .info .info-item .label {
    width: auto;
    height: auto;
    overflow: hidden;
    color: rgba(0,0,0,.65);
}

.message .message-content .info .info-item .value {
    width: auto;
    height: auto;
    overflow: hidden;
    color: rgba(0,0,0,.85);
    flex: 1;
}

.message .message-content .info .info-item .red {
    color: #ee3f4d!important;
}

.message .message-content .images {
    width: auto;
    height: auto;
    overflow: hidden;
    padding: 16rpx 0;
    margin-left: 32rpx;
    display: flex;
    justify-content: between;
    flex-wrap: wrap;
}

.message .message-content .images .img {
    width: 162rpx;
    height: 162rpx;
    margin-right: 12rpx;
    margin-bottom: 12rpx;
    border-radius: 8rpx;
    overflow: hidden;
    border: 1px solid rgba(48,50,55,.05);
}

.message .tips-info {
    width: auto;
    height: auto;
    font-size: 26rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    line-height: 44rpx;
    margin: 32rpx 32rpx 56rpx;
}

.message .statement {
    width: auto;
    height: 36rpx;
    font-size: 28rpx;
    font-weight: 400;
    color: #2d8cf0;
    line-height: 36rpx;
    text-align: center;
}

.message .message-footer {
    height: auto;
    width: auto;
    overflow: hidden;
    background: #fff;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 10;
}

.message .message-footer .contact-me {
    margin-left: 32rpx;
    width: 686rpx;
    height: 100rpx;
    background: #2d8cf0;
    border-radius: 8rpx;
    font-size: 32rpx;
    font-weight: 700;
    color: #fff;
    line-height: 100rpx;
    text-align: center;
    margin-top: 48rpx;
    margin-bottom: 32rpx;
}

.text-images .text {
    padding-bottom: 16rpx;
}