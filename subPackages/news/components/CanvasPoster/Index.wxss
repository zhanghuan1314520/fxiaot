.hide-bg {
    position: fixed;
    left: 0;
    bottom: 206rpx;
    width: 100%;
    height: 264rpx;
    background: linear-gradient(180deg,hsla(0,0%,100%,0),#fff);
    text-align: center;
    z-index: 2;
}

.hide-bg .text {
    margin-top: 200rpx;
    color: rgba(0,0,0,.45);
    font-size: 26rpx;
}

.hide-bg .text .iconnew {
    margin-left: 12rpx;
    font-size: 28rpx;
}

.share-btn-group {
    display: flex;
    justify-content: space-around;
    align-items: flex-end;
    height: 150rpx;
    padding-bottom: 56rpx;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
}

.share-btn-group .canvas-btn {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: transparent;
    line-height: 1;
}

.share-btn-group .canvas-btn .text {
    font-size: 28rpx;
    line-height: 36rpx;
    color: rgba(0,0,0,.65);
}

.share-btn-group .canvas-btn .btn-icon {
    width: 96rpx;
    height: 96rpx;
    border-radius: 96rpx;
    position: relative;
}

.share-btn-group .canvas-btn .btn-icon.share {
    background: url(https://imgcdn.huanjutang.com/assets/img/20200326/5e7c7f5fd771c.png) 50%/100% 96rpx no-repeat;
}

.share-btn-group .canvas-btn .btn-icon.save {
    background: url(https://imgcdn.huanjutang.com/assets/img/20200326/5e7c7f166e85c.png) 50%/100% 96rpx no-repeat;
}

.share-btn-group .canvas-btn .btn-icon .image {
    width: 46rpx;
    height: 42rpx;
    position: absolute;
    left: 60rpx;
    top: 0rpx;
}

.canvas-poster {
    background: #fff;
}