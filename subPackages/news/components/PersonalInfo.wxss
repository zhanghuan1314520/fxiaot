.info-container {
    display: flex;
    font-family: PingFangSC-Medium,PingFang SC;
    position: relative;
}

.info-avatar {
    position: relative;
    width: 84rpx;
    height: 84rpx;
    box-sizing: border-box;
    border: 1rpx solid #eee;
    border-radius: 50%;
}

.info-avatar .avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.info-avatar .avatar-tag {
    position: absolute;
    z-index: 9;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    right: 0;
    bottom: 0;
}

.info-empty {
    height: 20rpx;
}

.info-content {
    padding-top: 2rpx;
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.info-name {
    position: relative;
    line-height: 40rpx;
}

.info-name__text {
    font-size: 30rpx;
    line-height: 40rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
}

.info-name__time {
    margin-left: 16rpx;
    font-size: 24rpx;
    color: rgba(0,0,0,.45);
    line-height: 32rpx;
    font-family: PingFangSC-Regular,PingFang SC;
}

.info-level {
    width: 144rpx;
    height: 60rpx;
}