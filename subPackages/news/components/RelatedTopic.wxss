.related-topic {
    font-family: PingFangSC-Medium,PingFang SC;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.related-topic .related-topic__content {
    line-height: 40rpx;
}

.related-topic .related-topic__name {
    width: 576rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: rgba(0,0,0,.85);
    display: inline-block;
    vertical-align: middle;
    font-size: 34 rpx;
    font-weight: 700;
}

.related-topic .new-tongyong-gengduo {
    color: rgba(0,0,0,.25);
    line-height: 40rpx;
}

.related-topic .new-huati1 {
    font-size: 36rpx;
}

.related-topic .img {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 8rpx;
}

.related-topic.padding {
    font-family: PingFangSC-Regular,PingFang SC;
    height: 68rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    box-sizing: border-box;
    padding: 0 24rpx;
}

.related-topic.padding .related-topic__content {
    line-height: 36rpx;
}

.related-topic.padding .related-topic__name {
    width: 504rpx;
    font-weight: 400;
    font-size: 28rpx;
}

.related-topic.padding .new-tongyong-gengduo {
    line-height: 36rpx;
}

.new-huati1 {
    color: #2d8bf0;
    vertical-align: middle;
    margin-right: 12rpx;
}