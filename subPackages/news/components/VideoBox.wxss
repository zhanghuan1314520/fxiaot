.video-box {
    margin-top: 20rpx;
    width: 100%;
    position: relative;
}

.video-box__image {
    width: 100%;
    height: 388rpx;
    border-radius: 8rpx;
    display: block;
}

.video-box__mask {
    position: absolute;
    width: 100%;
    height: 100%;
    z-index: 9;
    background: rgba(0,0,0,.25);
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    left: 0;
    top: 0;
}

.video-box__play {
    width: 116rpx;
    height: 116rpx;
    border-radius: 50%;
}