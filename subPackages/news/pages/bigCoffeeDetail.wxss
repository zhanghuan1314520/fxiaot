page {
    background: #f7f7f7;
}

.point-title {
    overflow: hidden;
    text-align: center;
    width: 100%;
    background: #fff;
}

.point-title .back_bg {
    width: 100%;
    position: relative;
    top: -2rpx;
}

.point-title .avatar {
    width: 160rpx;
    height: 160rpx;
    border: 2rpx solid rgba(237,239,242,.5);
    border-radius: 50%;
    margin-top: 48rpx;
}

.point-title .bigCoffeeCont {
    margin-top: 24rpx;
    margin-bottom: 40rpx;
    text-align: center;
}

.point-title .bigCoffeeCont .name {
    height: 50rpx;
    font-weight: 400;
    color: #303237;
    line-height: 50rpx;
}

.point-title .bigCoffeeCont .small-name {
    height: 40rpx;
    font-weight: 400;
    color: #606266;
    line-height: 40rpx;
    margin: 40rpx auto 0;
}

.point-title .bigCoffeeCont .small-name text {
    margin: 0 2rpx;
}

.point-title .bigCoffeeCont .description {
    width: 624rpx;
    font-weight: 400;
    line-height: 40rpx;
    text-align: center;
    margin: 12rpx auto 0;
}

.point-title .bigCoffeeCont .share {
    width: 240rpx;
    height: 78rpx;
    line-height: 82rpx;
    background: #2d8cf0;
    border-radius: 8rpx;
    margin: 52rpx auto 0;
}

.article-list .title {
    background: #fff;
    color: #de534b;
    height: 88rpx;
    line-height: 88rpx;
    padding: 0 30rpx;
    border-bottom: 1rpx solid #e2e2e2;
    position: relative;
}

.article-list .title:after {
    content: "";
    height: 6rpx;
    width: 60rpx;
    background: #de534b;
    position: absolute;
    left: 60rpx;
    bottom: -2rpx;
}

.article-list .article-line {
    margin-bottom: 10rpx;
}

.bottom_tip {
    height: 118rpx;
    line-height: 118rpx;
    text-align: center;
    padding-bottom: 20rpx;
}

.bottom_tip view {
    display: inline-block;
}

.bottom_tip .bottom_line {
    width: 60rpx;
    height: 1rpx;
    content: "";
    background: #ccc;
    position: relative;
    top: -4rpx;
}

.bottom_tip .before {
    left: -40rpx;
}

.bottom_tip .after {
    right: -40rpx;
}

.blank {
    height: 20rpx;
    width: 100vw;
    background-color: #f7f7f7;
}