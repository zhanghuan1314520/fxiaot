    margin-left: 22rpx;
}

.tips .new-xianxing-shuoming {
    font-size: 28rpx!important;
    margin-right: 7rpx;
}

.image-upload_list {
    display: flex;
    margin-top: 40rpx;
    flex-wrap: wrap;
}

.image-upload_list .image_item:nth-child(4n) {
    margin-right: 0;
}

.image-upload_button,.image_item {
    width: 140rpx;
    height: 140rpx;
    margin-bottom: 32rpx;
}

.image_item {
    border-radius: 10rpx;
    margin-right: calc((100vw - 608rpx) / 3);
    position: relative;
}

.image_item>image:first-child {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}

.image_item>image:last-child {
    position: absolute;
    width: 48rpx;
    height: 48rpx;
    top: -24rpx;
    right: -24rpx;
    z-index: 9;
}

.btn-know {
