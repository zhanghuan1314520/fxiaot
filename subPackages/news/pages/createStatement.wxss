.model {
    position: fixed;
    background: #fff;
    border-radius: 10rpx;
    width: 620rpx;
    height: 782rpx;
    z-index: 1000;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.model-tip {
    padding: 30rpx 0;
    text-align: center;
    font-size: 36rpx;
    color: #303237;
    font-weight: 700;
}

.model-text1 {
    line-height: 42rpx;
    color: #606266;
    font-size: 30rpx;
}

.input-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 15rpx 0;
}

.model-btn {
    border-top: 1px solid rgba(0,0,0,.1);
    display: flex;
    justify-content: space-around;
}

.model-btn button {
    flex: 1;
}

.model-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    background: rgba(0,0,0,.65);
    top: 0;
    z-index: 999;
