.backhome {
    background: rgba(35,205,148,.98);
    box-shadow: 0 4rpx 16rpx 0 rgba(35,205,148,.3);
}

.page-control {
    position: fixed;
    right: 0;
    bottom: 184rpx;
    z-index: 99;
    margin-right: 24rpx;
}

.page-control .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 84rpx;
    width: 84rpx;
    margin-top: 20rpx;
    color: #fff;
    line-height: 1;
    border-radius: 50%;
}

.page-control .btn .iconnew {
    line-height: 1;
}

.page-control .btn.moveIn {
    transform: translateX(0);
}

.page-control .share {
    transform: translateX(370rpx);
    transition: all .5s ease;
    background: rgba(47,140,239,.9);
    box-shadow: 0 4rpx 16rpx 0 rgba(47,140,239,.3);
}

.page-control .backhome {
    background: rgba(35,205,148,.98);
    box-shadow: 0 4rpx 16rpx 0 rgba(35,205,148,.3);
}

