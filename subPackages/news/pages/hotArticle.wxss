page {
    background: #f2f2f2;
}

.article-list {
    padding: 24rpx 24rpx 60rpx;
    width: 100%;
    box-sizing: border-box;
    background: #fff;
    border-radius: 16rpx;
}

.article-list .question-cont {
    position: relative;
    width: 100%;
    border-radius: 16rpx;
    border: 2rpx solid rgba(21,24,45,.05);
    overflow: hidden;
    margin-bottom: 20rpx;
}

.article-list .question-cont image {
    display: block;
    width: 100%;
    height: 274rpx;
    border-top-right-radius: 16rpx;
    border-top-left-radius: 16rpx;
}

.article-list .question-cont .cont {
    padding: 20rpx 28rpx 28rpx;
    box-sizing: border-box;
}

.article-list .question-cont .cont .text-cont {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    line-height: 44rpx;
    margin-bottom: 12rpx;
}

.article-list .question-cont .cont .text-des {
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}