page {
    background: #fff;
}

.flex-style {
    flex: 1;
}

.f-left {
    float: left;
}

.f-right {
    float: right;
}

.statement-all {
    padding-bottom: 140rpx;
    background-color: #fff;
}

.statement-all .statement-item {
    overflow: hidden;
    margin-left: 28rpx;
    margin-right: 24rpx;
}

.statement-all-top {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #fff;
    border-bottom: 1rpx solid rgba(48,55,64,.05);
}

.statement-all-top .content {
    display: -webkit-box;
}

.statement-all-top .item {
    position: relative;
    padding: 0 20rpx;
    margin-right: 14rpx;
    box-sizing: border-box;
    border-radius: 6rpx;
    color: #303237;
    letter-spacing: 1rpx;
    font-size: 28rpx;
}

.statement-all-top .item .span {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 0rpx;
    height: 6rpx;
    background: #fff;
    border-radius: 4rpx;
    transition: width .2s;
}

.statement-all-top .active {
    color: #2d8cf0;
    font-weight: 600;
    font-size: 32rpx!important;
}

.statement-all-top .active .span {
    background: #2f8cef;
    width: 72rpx;
}

.statement-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    padding-left: 30rpx;
    padding-bottom: 16rpx;
    padding-top: 16rpx;
}

.statement-top .affirming {
    width: auto;
    font-size: 26rpx;
    font-weight: 400;
    color: #96989e;
}

.statement-top .affirming text:last-child {
    color: #6a82c7;
}

.statement-top .share-btn {
    display: flex;
    align-items: center;
    background: transparent;
    font-size: 26rpx;
    color: #6a82c7;
}

.statement-top .share-btn .icon-fenxiang5 {
    margin-left: 10rpx;
}

.concat-im {
    flex: 1;
}

.concat-im,.mes-cont {
    width: 58rpx;
    height: 58rpx;
}

.mes-cont {
    border-radius: 58rpx;
    overflow: hidden;
    font-size: 30rpx;
    margin-left: 28rpx;
}

.mes-cont image {
    height: 58rpx;
    width: 58rpx;
    border-radius: 50%;
}

.phone-cont {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
    width: 58rpx;
    height: 58rpx;
    border-radius: 58rpx;
    overflow: hidden;
    margin-left: 28rpx;
    color: #4f82ea;
}

.phone-cont image {
    height: 58rpx;
    width: 58rpx;
    border-radius: 50%;
}

.footer {
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-direction: row;
    position: fixed;
    width: 100%;
    bottom: 0;
    box-sizing: border-box;
    padding: 12rpx 30rpx;
    background: hsla(0,0%,100%,.95);
    box-shadow: 0 -4rpx 12rpx 0 rgba(21,24,45,.03);
}

.footer .btn {
    display: block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 90rpx;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
    background: linear-gradient(90deg,#2d8cf0,#1068eb);
}

.btn-wrap {
    box-sizing: border-box;
    display: flex;
    flex: 1;
}

.footer-content {
    background-color: #fff;
    padding: 28rpx 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 -4rpx 12rpx 0 rgba(21,24,45,.03);
}

.footer-content .footer-btn {
    height: 100rpx;
    width: 100%;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 700;
    color: #fff;
    line-height: 40rpx;
}

.footer-content .color-right {
    margin-left: 22rpx;
    background: #2d8cf0;
}

.statement-info {
    height: 58rpx;
    line-height: 58rpx;
    width: auto;
}

.statement-info .point {
    margin-top: 17rpx;
    width: 24rpx;
    height: 24rpx;
    position: relative;
}

.statement-info .point image {
    width: 24rpx;
    height: 24rpx;
    float: left;
}

.statement-info .line {
    display: inline-block;
    width: 2rpx;
    height: 20rpx;
    background: #edeff2;
    margin: 0 8rpx;
}

.statement-info .authors {
    width: 480rpx;
    height: 48rpx;
    margin-bottom: 12rpx;
    margin-left: 14rpx;
    color: #96989e;
    font-size: 24rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.statement-info .icons {
    width: 175rpx;
    display: flex;
    align-items: center;
}

.statement-bodys {
    clear: both;
    margin-left: 10rpx;
    border-left: 4rpx solid #f5f7fa;
    width: auto;
    height: auto;
    overflow: hidden;
    padding-left: 24rpx;
    padding-bottom: 24rpx;
}

.statement-bodys .statement-title {
    width: auto;
    height: auto;
    overflow: hidden;
    font-size: 30rpx;
    font-weight: 700;
    color: #303237;
    line-height: 42rpx;
    margin-bottom: 12rpx;
}

.statement-bodys .statement-content {
    font-size: 28rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 36rpx;
}

.statement-content.wrap {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
}

.statement-dropContent {
    box-sizing: border-box;
    color: #2d8cf0;
    font-size: 26rpx;
    margin-top: 12rpx;
}

.statement-images {
    width: auto;
    height: auto;
    overflow: hidden;
    margin-bottom: 24rpx;
    margin-top: 24rpx;
}

.image-item-one {
    width: 400rpx;
    height: 260rpx;
    border-radius: 4rpx;
}

.image-item {
    border-radius: 4rpx;
    margin-right: 8rpx;
    margin-bottom: 8rpx;
    float: left;
}

.image-item,.image-item image {
    width: 180rpx;
    height: 180rpx;
}

.none-data {
    width: 100%;
    height: 90rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    opacity: .6;
    font-size: 30rpx;
}

.none-data text {
    font-size: 24rpx;
}

.backhome {
    background: rgba(35,205,148,.98);
    box-shadow: 0 4rpx 16rpx 0 rgba(35,205,148,.3);
}

.page-control {
    position: fixed;
    right: 0;
    bottom: 184rpx;
    z-index: 99;
    margin-right: 24rpx;
}

.page-control .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 84rpx;
    width: 84rpx;
    margin-top: 20rpx;
    color: #fff;
    line-height: 1;
    border-radius: 50%;
}

.page-control .btn .iconnew {
    line-height: 1;
}

.page-control .btn.moveIn {
    transform: translateX(0);
}

.page-control .share {
    transform: translateX(370rpx);
    transition: all .5s ease;
    background: rgba(47,140,239,.9);
    box-shadow: 0 4rpx 16rpx 0 rgba(47,140,239,.3);
}

.page-control .backhome {
    background: rgba(35,205,148,.98);
    box-shadow: 0 4rpx 16rpx 0 rgba(35,205,148,.3);
}