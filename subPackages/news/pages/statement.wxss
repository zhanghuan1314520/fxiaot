page {
    background: #fff;
}

.flex-style {
    flex: 1;
}

.share-btn {
    width: 152rpx;
    text-align: center;
    font-family: PingFangSC-Regular,PingFang SC;
    color: rgba(0,0,0,.85);
    line-height: 36rpx;
    font-size: 28rpx;
}

.share-btn .iconnew {
    font-size: 40rpx;
    color: rgba(0,0,0,.85);
}

.share-btn .text {
    margin-top: 6rpx;
}

.statement {
    padding-bottom: env(safe-area-inset-bottom);
}

.statement-all {
    margin-top: -40rpx;
    padding: 0 32rpx 156rpx;
    background-color: #fff;
}

.statement-all-top {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    background: #fff;
    border-bottom: 1rpx solid rgba(0,0,0,.07);
    position: sticky;
    top: 0;
    z-index: 2;
}

.statement-all-top .content {
    width: 100%;
    display: flex;
    padding: 0 32rpx;
    height: 100rpx;
    font-family: PingFangSC-Regular,PingFang SC;
}

.statement-all-top .item {
    display: flex;
    align-items: center;
    height: 100rpx;
    position: relative;
    margin-right: 46rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    color: rgba(0,0,0,.45);
    line-height: 36rpx;
    white-space: nowrap;
}

.statement-all-top .item .span {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    margin: 0 auto;
    width: 0rpx;
    height: 6rpx;
    background: #fff;
    border-radius: 4rpx;
    transition: width .2s;
}

.statement-all-top .active {
    font-size: 32rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 40rpx;
}

.statement-all-top .active .span {
    width: 40rpx;
    height: 6rpx;
    background: #2d8cf0;
}

.statement-top {
    display: flex;
    justify-content: space-between;
    flex-direction: row;
    height: 90rpx;
    align-items: center;
    padding: 0 32rpx;
    justify-content: flex-end;
}

.statement-top .affirming {
    font-size: 24rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    color: rgba(0,0,0,.45);
    line-height: 32rpx;
}

.statement-top .affirming text:last-child {
    display: inline-block;
    line-height: 90rpx;
    color: #2f8cef;
}

.footer {
    display: flex;
    align-items: center;
    justify-content: space-around;
    flex-direction: row;
    position: fixed;
    width: 100%;
    bottom: 0;
    z-index: 3;
    box-sizing: border-box;
    padding: 12rpx 30rpx;
    background: hsla(0,0%,100%,.95);
    box-shadow: 0 -4rpx 12rpx 0 rgba(21,24,45,.03);
}

.footer .btn {
    display: block;
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    border-radius: 90rpx;
    color: #fff;
    text-align: center;
    font-size: 30rpx;
    background: linear-gradient(90deg,#2d8cf0,#1068eb);
}

.footer-content {
    background-color: #fff;
    padding: 28rpx 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-shadow: 0 -4rpx 12rpx 0 rgba(21,24,45,.03);
}

.footer-content .footer-btn {
    height: 100rpx;
    width: 100%;
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    font-family: PingFangSC-Medium,PingFang SC;
    font-weight: 700;
    color: #fff;
    line-height: 40rpx;
}

.footer-content .color-right {
    margin-left: 22rpx;
    background: #2d8cf0;
}

.btn-wrap {
    box-sizing: border-box;
    display: flex;
    flex: 1;
}

.statement-info {
    margin-top: 28rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.statement-info .authors {
    display: flex;
    align-items: center;
    width: 480rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-size: 28rpx;
    font-family: PingFangSC-Regular,PingFang SC;
    color: rgba(0,0,0,.85);
    line-height: 32rpx;
}

.statement-info .avatar {
    margin-right: 16rpx;
    width: 48rpx;
    height: 48rpx;
    border-radius: 24rpx;
}

.statement-info .icons {
    width: 175rpx;
    display: flex;
    align-items: center;
}

.none-data {
    width: 100%;
    padding: 50rpx 0;
    display: flex;
    align-items: center;
    justify-content: center;
}

.none-data .image {
    width: 218rpx;
    height: 78rpx;
}

.backhome {
    background: rgba(35,205,148,.98);
    box-shadow: 0 4rpx 16rpx 0 rgba(35,205,148,.3);
}

.page-control {
    position: fixed;
    right: 0;
    bottom: 184rpx;
    z-index: 99;
    margin-right: 24rpx;
}

.page-control .btn {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 84rpx;
    width: 84rpx;
    margin-top: 20rpx;
    color: #fff;
    line-height: 1;
    border-radius: 50%;
}

.page-control .btn .iconnew {
    line-height: 1;
}

.page-control .btn.moveIn {
    transform: translateX(0);
}

.page-control .share {
    transform: translateX(370rpx);
    transition: all .5s ease;
    background: rgba(47,140,239,.9);
    box-shadow: 0 4rpx 16rpx 0 rgba(47,140,239,.3);
}

.page-control .backhome {
    background: rgba(35,205,148,.98);
    box-shadow: 0 4rpx 16rpx 0 rgba(35,205,148,.3);
}