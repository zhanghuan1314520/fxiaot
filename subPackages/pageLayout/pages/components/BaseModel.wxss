.model {
    position: fixed;
    border-radius: 8rpx;
    width: 620rpx;
    background: #fff;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
    z-index: 999;
}

.top-box {
    padding: 48rpx 32rpx 32rpx;
    box-sizing: border-box;
}

.model-tip {
    margin-bottom: 32rpx;
    font-weight: 700;
    font-size: 36rpx;
    color: #303237;
    text-align: center;
}

.model-text1 {
    padding-bottom: 32rpx;
    line-height: 40rpx;
    color: #333;
    font-size: 30rpx;
    text-align: center;
}

.model-text2 {
    color: #96989e;
    font-size: 26rpx;
    line-height: 36rpx;
}

.input-box {
    align-items: center;
}

.input-box,.model-btn {
    display: flex;
    justify-content: space-between;
}

.model-btn {
    height: 100rpx;
    line-height: 100rpx;
    border-top: 1rpx solid rgba(0,0,0,.1);
}

.model-btn .left {
    color: #606266;
    border-right: 1rpx solid rgba(0,0,0,.1);
}

.model-btn .left,.model-btn .right {
    font-size: 36rpx;
    text-align: center;
    flex: 1;
    background: transparent;
}

.model-btn .right {
    color: #2f8cef;
    font-weight: 700;
}

.model-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    background: rgba(0,0,0,.65);
    top: 0;
    z-index: 998;
}