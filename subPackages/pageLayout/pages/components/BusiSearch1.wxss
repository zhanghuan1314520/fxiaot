.search-bg-box {
    width: 100%;
    background: #fff;
    position: relative;
    z-index: 3;
}

.search-bg-box .bg-image {
    width: 100%;
    display: block;
}

.search-bg-box .shadow {
    width: 100%;
    height: 160rpx;
    background: linear-gradient(180deg,rgba(34,34,34,0),rgba(0,0,0,.36));
    position: absolute;
    left: 0;
    bottom: 0;
}

.search-bg-box .search-box {
    position: absolute;
    bottom: 40rpx;
    width: 690rpx;
    height: 76rpx;
    background: hsla(0,0%,96.1%,.2);
    border-radius: 38rpx;
    border: 1px solid hsla(0,0%,100%,.4);
    margin: 0 30rpx;
    color: #fff;
    font-size: 28rpx;
    z-index: 20;
}

.search-bg-box .search-box .icon-search {
    height: 32rpx;
    width: 32rpx;
    float: left;
    margin-left: 34rpx;
    margin-right: 18rpx;
    margin-top: 22rpx;
}

.search-bg-box .search-box .input {
    height: 76rpx;
    width: 560rpx;
    line-height: 76rpx;
    display: inline-block;
}