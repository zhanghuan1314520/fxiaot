.project {
    padding: 24rpx 32rpx;
}

.banner {
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}

.banner swiper-item {
    position: relative;
    z-index: 22;
}

.banner .advert {
    font-size: 18rpx;
    line-height: 26rpx;
    text-align: center;
    background: rgba(0,0,0,.3);
    width: 50rpx;
    height: 26rpx;
    position: absolute;
    right: 20rpx;
    bottom: 15rpx;
    z-index: 222;
    border-radius: 1rpx;
    opacity: .4;
}

.not_id_card {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    height: 740rpx;
    width: auto;
    background-color: #fff;
}

.project-nav-position {
    position: relative;
}

.project-nav {
    position: absolute;
    top: 0;
    width: 100%;
}

.project-nav-blank {
    width: 100vw;
    height: 80rpx;
}

.project-nav-fixed {
    top: 100rpx;
    z-index: 30;
    position: fixed;
    width: 100%;
}

.empty_block {
    height: 100rpx;
    background: #f2f2f2;
}