.brand-detail {
    overflow: hidden;
    box-shadow: 0 2rpx 12rpx 0 rgba(11,96,210,.1);
    border-radius: 0 0 12rpx 12rpx;
    padding: 24rpx 20rpx 24rpx 24rpx;
}

.brand-detail .left-logo {
    width: 214rpx;
    height: 156rpx;
    border-radius: 10rpx;
    float: left;
    border: 1rpx solid #edeff2;
}

.brand-detail .right-container {
    margin-left: 240rpx;
    position: relative;
    overflow: hidden;
}

.brand-detail .right-container .brand-name {
    overflow: hidden;
    padding-bottom: 14rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.brand-detail .right-container .brand-name .name {
    color: #383f51;
}

.brand-detail .right-container .brand-name .name image {
    width: 32rpx;
    height: 28rpx;
    margin-left: 8rpx;
}

.brand-detail .right-container .brand-name .attention-btn {
    float: right;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 28rpx;
}

.brand-detail .right-container .brand-name .attention-btn .iconnew {
    margin-right: 6rpx;
    color: #dfdfdf;
}

.brand-detail .right-container .brand-name .attention-btn .active {
    color: #ee3f4d;
}

.brand-detail .right-container .brand-introduction {
    line-height: 34rpx;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    margin-right: 72rpx;
}

.brand-detail .right-container .toggle_page {
    color: #6a82c7;
    position: absolute;
    bottom: -4rpx;
    right: 0;
    display: flex;
    align-items: center;
    padding-left: 16rpx;
}

.swiper-image {
    margin: 24rpx;
    box-shadow: 0 2rpx 4rpx 0 rgba(11,96,210,.1);
    height: 300rpx;
    border-radius: 12rpx;
    box-sizing: border-box;
}

.swiper-image .item-image {
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
}

.swiper-image .item-image navigator {
    width: 100%;
    height: 100%;
}

.swiper-image .item-image image {
    border-radius: 12rpx;
    width: 100%;
    height: 100%;
}

.brand-detail-fixed {
    position: fixed;
    top: 0;
    width: 100%;
    padding: 0 24rpx;
    box-sizing: border-box;
    background: #fff;
    box-shadow: 0 2rpx 12rpx 0 rgba(11,96,210,.1);
    border-radius: 0 0 12rpx 12rpx;
    z-index: 5;
    transition: all .3s;
    overflow: hidden;
}

.brand-detail-fixed .brand-name-info {
    padding-top: 24rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.brand-detail-fixed .brand-name-info .brand-image-name {
    display: flex;
    align-items: center;
}

.brand-detail-fixed .brand-name-info .brand-image-name image {
    width: 214rpx;
    height: 156rpx;
    border-radius: 10rpx;
    margin-right: 26rpx;
    border: 1rpx solid #edeff2;
}

.brand-detail-fixed .brand-name-info .brand-image-name .name {
    color: #383f51;
}

.brand-detail-fixed .brand-name-info .brand-image-name .name image {
    width: 32rpx;
    height: 28rpx;
    margin-left: 8rpx;
}

.brand-detail-fixed .brand-name-info .attention-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 24rpx;
}

.brand-detail-fixed .brand-name-info .attention-btn .iconnew {
    margin-right: 6rpx;
    color: #dfdfdf;
}

.brand-detail-fixed .brand-name-info .attention-btn .active {
    color: #ee3f4d;
}

.brand-detail-fixed .main-content {
    padding-top: 20rpx;
}

.brand-detail-fixed .main-content text {
    line-height: 34rpx;
    display: inline-block;
}

.brand-detail-fixed .toggle-close {
    text-align: center;
    line-height: 34rpx;
    color: #6a82c7;
    padding: 16rpx 0 24rpx;
}

.container {
    margin: 34rpx 32rpx 120rpx;
}

.container .title {
    color: #383f51;
    padding: 0 0 2rpx;
    margin-bottom: 20rpx;
}

.brand-share {
    position: fixed;
    right: 28rpx;
    bottom: 114rpx;
    background: rgba(47,140,239,.95);
    box-shadow: 0 4rpx 16rpx 0 rgba(47,140,239,.3);
    width: 84rpx;
    height: 84rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    color: #fff;
    line-height: 1;
}