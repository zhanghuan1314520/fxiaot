.filters__bg {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.2);
    opacity: 0;
    transform: translateY(-100%);
    transition: opacity .3s;
}

.filters__bg.filters__bg-active {
    opacity: 1;
    transform: translateY(0);
}

.sort-filter {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background: #fff;
}

.sort-filter .sort-filter__container {
    height: 412rpx;
    box-sizing: border-box;
    overflow-y: scroll;
}

.sort-filter .sort-filter__footer {
    height: 144rpx;
}

.area-filter {
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 100%;
    background: #fff;
}

.area-filter .area-filter__container {
    display: flex;
    height: 412rpx;
    box-sizing: border-box;
    overflow: scroll;
}

.area-filter .area-filter__left {
    width: 150rpx;
    height: 100%;
    box-sizing: border-box;
    padding-top: 20rpx;
}

.area-filter .area-filter__right {
    flex: 1;
    height: 100%;
    background: #fafafa;
    overflow: hidden;
}

.area-filter .area-filter__right .area__right-nearby {
    height: 100%;
    padding-top: 20rpx;
    box-sizing: border-box;
}

.area-filter .area-filter__right .area__right-town,.area-filter .area-filter__right .area__right-train {
    display: flex;
    height: 100%;
    overflow: hidden;
}

.area-filter .area-filter__right .area__right-town .right-town__second,.area-filter .area-filter__right .area__right-town .right-train__second,.area-filter .area-filter__right .area__right-train .right-town__second,.area-filter .area-filter__right .area__right-train .right-train__second {
    flex: 1;
    border-left: 1rpx solid rgba(0,0,0,.07);
}

.area-filter .area-filter__right .area__right-town .right-town__first,.area-filter .area-filter__right .area__right-town .right-town__second,.area-filter .area-filter__right .area__right-town .right-train__first,.area-filter .area-filter__right .area__right-town .right-train__second,.area-filter .area-filter__right .area__right-train .right-town__first,.area-filter .area-filter__right .area__right-train .right-town__second,.area-filter .area-filter__right .area__right-train .right-train__first,.area-filter .area-filter__right .area__right-train .right-train__second {
    height: 100%;
    padding-top: 20rpx;
    box-sizing: border-box;
}

.area-filter .area-filter__footer {
    height: 144rpx;
}