.haveSearchBar {
    padding-top: 148rpx;
}

.haveSearchBar .search {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
}

.project-banner {
    margin: 16rpx 32rpx;
}

.banner {
    width: 100%;
    height: 300rpx;
    overflow: hidden;
}

.banner swiper-item {
    position: relative;
    z-index: 22;
}

.banner .advert {
    font-size: 18rpx;
    line-height: 26rpx;
    text-align: center;
    background: rgba(0,0,0,.3);
    width: 50rpx;
    height: 26rpx;
    position: absolute;
    right: 20rpx;
    bottom: 15rpx;
    z-index: 222;
    border-radius: 1rpx;
    opacity: .4;
}

.search-bar-input {
    padding-left: 0;
}

.projects {
    position: relative;
    z-index: 1;
    margin: 22rpx 32rpx;
    overflow: hidden;
}

.not_id_card {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    margin-top: 220rpx;
}

.not_id_card image {
    width: 358rpx;
    height: 224rpx;
}

.not_id_card text {
    margin-top: 46rpx;
    color: #6a7490;
    font-size: 32rpx;
}

.fixed-top {
    position: fixed;
    top: 128rpx;
    left: 0;
    z-index: 99;
    width: 100%;
}

.fixed-top .filters__bg {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.2);
    opacity: 0;
    transform: translateY(-100%);
    transition: opacity .3s;
}

.fixed-top .filters__bg.filters__bg-active {
    opacity: 1;
    transform: translateY(0);
}

.filter-block {
    height: 78rpx;
    background: #fff;
}

.content-intro {
    line-height: 56rpx;
    background: #fff6df;
    margin: 16rpx 32rpx 0;
    border-radius: 8rpx;
    padding: 12rpx 20rpx;
    box-sizing: border-box;
    display: flex;
    justify-content: space-between;
}

.content-intro .content {
    flex: 1;
    width: 624rpx;
    line-height: 32rpx;
    color: #99651f;
}

.content-intro .icon {
    line-height: 32rpx;
    margin-left: 18rpx;
    width: 32rpx;
    color: #99651f;
}

.short-margin {
    margin: 16rpx 32rpx 0;
    border-radius: 8rpx;
}

.projects__filters {
    position: sticky;
    top: 0;
    left: 0;
    z-index: 98;
    width: 100%;
    height: 88rpx;
}

.projects__filters .projects__filters-title {
    padding-left: 34rpx;
    color: rgba(0,0,0,.85);
    font-weight: 700;
    line-height: 52rpx;
    margin-bottom: 8rpx;
}

.projects__filters .filters__fixed {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    width: 100%;
}