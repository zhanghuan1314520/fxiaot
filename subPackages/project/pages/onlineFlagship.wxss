.flagship {
    min-height: 100vh;
    background: #f2f2f2;
}

.flagship-top {
    width: 100%;
    height: 456rpx;
    background-image: url(https://imgcdn.huanjutang.com/assets/img/2020251612188081.png);
    background-size: 100% 100%;
}

.flagship-top image {
    width: 244rpx;
    position: relative;
    top: 36rpx;
    left: 32rpx;
}

.flagship-list {
    position: relative;
    top: -150rpx;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin: 0 28rpx;
}

.flagship-list__item {
    width: 336rpx;
    height: 352rpx;
    position: relative;
    background: #fff;
    margin-top: 24rpx;
    border-radius: 10rpx 10rpx 0 0;
}

.flagship-list__item image {
    width: 336rpx;
    height: 244rpx;
    border-radius: 10rpx 10rpx 0 0;
}

.flagship-list__item-name {
    height: 108rpx;
    font-size: 32rpx;
    color: #303740;
}

.flagship-list__item-name,.flagship-list__item-tap {
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
}

.flagship-list__item-tap {
    position: absolute;
    width: 144rpx;
    height: 52rpx;
    background: linear-gradient(45deg,#ff8e5c,#ff5431);
    border-radius: 8rpx 0 8rpx 0;
    color: #fff;
    font-size: 28rpx;
    left: 0;
    top: 0;
}

.flagship-share {
    position: fixed;
    right: 28rpx;
    bottom: 114rpx;
    background: rgba(47,140,239,.95);
    box-shadow: 0 4rpx 16rpx 0 rgba(47,140,239,.3);
    width: 84rpx;
    height: 84rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
    color: #fff;
    line-height: 1;
}