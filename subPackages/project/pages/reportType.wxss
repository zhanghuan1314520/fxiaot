page {
    background: #f7f7f7;
}

.report-cont {
    padding: 40rpx 24rpx 10rpx;
    background: #fff;
    margin-bottom: 20rpx;
}

.report-cont .report-tip {
    position: relative;
    top: -14rpx;
    margin-right: 10rpx;
}

.report-cont .report-main-cont {
    overflow: hidden;
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
    padding-top: 40rpx;
}

.report-cont .report-main-cont .report-type-line {
    text-align: center;
    width: 30%;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    margin-right: 30rpx;
    position: relative;
    overflow: hidden;
    margin-bottom: 30rpx;
    color: #606266;
    background: rgba(150,152,158,.1);
}

.report-cont .report-main-cont .active {
    background: rgba(45,140,240,.1);
    color: #2d8cf0;
    position: relative;
}

.report-cont .report-main-cont .active .choosed {
    width: 60rpx;
    height: 60rpx;
    background: #2d8cf0;
    border-radius: 60rpx;
    position: absolute;
    right: -30rpx;
    top: -30rpx;
}

.report-cont .report-main-cont .active .choosed .icon-gougou {
    position: absolute;
    top: 4rpx;
    left: 5rpx;
}

.report-cont .report-main-cont .report-type-line-img {
    text-align: center;
    width: 19%;
    height: 140rpx;
    margin-right: 48rpx;
    position: relative;
    margin-bottom: 48rpx;
    border-radius: 10rpx;
}

.report-cont .report-main-cont .report-type-line-img image {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
    z-index: 22;
}

.report-cont .report-main-cont .report-type-line-img .choosed {
    width: 36rpx;
    height: 36rpx;
    line-height: 36rpx;
    background: #ee3f4d;
    border-radius: 36rpx;
    position: absolute;
    right: -16rpx;
    top: -16rpx;
    z-index: 222;
}

.report-cont .report-main-cont .border-line {
    border: 4rpx dashed #dfdfdf;
    line-height: 140rpx;
    font-size: 68rpx;
}

.report-cont .report-main-cont .textarea-box {
    padding: 22rpx 24rpx;
    width: 100%;
    min-height: 168rpx;
    background: #f8f8f9;
    border-top-right-radius: 10rpx;
    border-top-left-radius: 10rpx;
}

.report-cont .report-main-cont .input-box {
    line-height: 90rpx;
    width: 100%;
    padding: 22rpx 24rpx 28rpx;
    background: #f8f8f9;
    border-radius: 10rpx;
}

.report-cont .report-main-cont .text-num {
    text-align: right;
    width: 100%;
    padding-right: 24rpx;
    background: #f8f8f9;
    padding-bottom: 20rpx;
    border-bottom-right-radius: 10rpx;
    border-bottom-left-radius: 10rpx;
}

.report-cont .report-main-cont .no-margin-right {
    margin-right: 0;
}

.up-file {
    text-align: center;
    font-weight: 700;
    margin: 80rpx 24rpx 40rpx;
    width: 686rpx;
    height: 100rpx;
    line-height: 100rpx;
    background: #2d8cf0;
    border-radius: 8rpx;
}