page {
    background-color: #f7f7f7;
    padding-top: 116rpx;
}

.search-bar {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 116rpx;
    box-sizing: border-box;
    padding: 12rpx 24rpx 0;
    background-color: #2d8cf0;
    z-index: 999;
}

.search-bar .search-btn {
    float: right;
    height: 76rpx;
    width: 110rpx;
    line-height: 76rpx;
    text-align: center;
    padding-left: 20rpx;
    background: transparent;
}

.search-bar .search-bar-form {
    background: #fff;
    line-height: 100%;
    color: #ccc;
    border-radius: 76rpx;
    position: relative;
    margin: 0;
    z-index: 1;
    overflow: hidden;
}

.search-bar .search-bar-form image {
    width: 36rpx;
    height: 76rpx;
    float: left;
    margin-left: 20rpx;
}

.search-bar .search-bar-form .search-input-place {
    color: #96989e;
    font-size: 24rpx;
}

.search-bar .search-bar-form .weui-icon-clear,.search-bar .search-bar-form .weui-icon-search {
    width: 76rpx;
    height: 76rpx;
    line-height: 76rpx;
    text-align: center;
    font-size: 38rpx;
    color: #ccc;
    padding: 0;
}

.search-bar .search-bar-form .search-bar-input {
    width: auto!important;
    margin: 0 76rpx;
    height: 76rpx;
    color: #666;
    padding-left: 0;
}

.search-bar .search-bar-form .weui-icon-clear {
    position: relative;
    float: right;
    z-index: 2;
    left: 0;
}

.nothing {
    margin-top: 200rpx;
    text-align: center;
}

.nothing image {
    display: inline-block;
    width: 276rpx;
    height: 170rpx;
}

.nothing .text {
    margin-top: 48rpx;
    padding-bottom: 124rpx;
}

.search-history {
    margin: 0 24rpx;
}

.search-history .search-title {
    margin-top: 44rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    line-height: 1;
    overflow: hidden;
    padding-bottom: 32rpx;
}

.search-history .search-title.often-search {
    padding-bottom: 20rpx;
}

.search-history .search-title .iconnew {
    color: #b5b6bb;
}

.search-history .search-content {
    overflow: hidden;
}

.search-history .search-content .search-line {
    height: 52rpx;
    background: rgba(48,55,64,.05);
    line-height: 52rpx;
    padding: 0 16rpx;
    border-radius: 4rpx;
    margin-right: 16rpx;
    margin-bottom: 16rpx;
    float: left;
}

.question-container {
    padding: 24rpx;
    background: #f2f2f2;
}

.question-container .question-list {
    background: #fff;
    border-radius: 10rpx;
    padding: 32rpx 28rpx 24rpx;
    margin-bottom: 20rpx;
}

.question-container .question-list .question-line-top {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.question-container .question-list .question-line-top .question-sign {
    overflow: hidden;
}

.question-container .question-list .question-line-top .question-sign .ask-for {
    height: 40rpx;
    background: #2f8cef;
    border-radius: 2rpx;
    padding: 0 8rpx;
    float: left;
    margin-right: 16rpx;
    line-height: 40rpx;
}

.question-container .question-list .question-line-top .question-sign .ask-for.green-bg {
    background: #0abf79;
}

.question-container .question-list .question-line-top .question-sign .question-type {
    float: left;
    height: 40rpx;
    line-height: 40rpx;
    background: rgba(255,125,79,.15);
    border-radius: 4rpx;
    color: #ff7d4f;
    padding: 0 8rpx;
    margin-right: 8rpx;
}

.question-container .question-list .question-line-top .person-view {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: #b5b6bb;
    font-size: 24rpx;
}

.question-container .question-list .question-line-top .person-view .view-num {
    margin-right: 12rpx;
}

.question-container .question-list .question-line-top .person-view .circle {
    position: relative;
    top: -6rpx;
}

.question-container .question-list .question-line-top .person-view .answer-num {
    margin-left: 12rpx;
}

.question-container .question-list .question-line-middle {
    line-height: 40rpx;
    min-height: 40rpx;
}

.question-container .question-list .question-line-bottom {
    padding-top: 32rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.question-container .question-list .question-line-bottom .left-person-info {
    display: flex;
    align-items: center;
}

.question-container .question-list .question-line-bottom .left-person-info image {
    width: 32rpx;
    height: 32rpx;
    border: 2rpx solid rgba(48,55,64,.05);
    margin-right: 10rpx;
    border-radius: 32rpx;
}

.question-container .question-list .question-line-bottom .left-person-info .name {
    margin-right: 16rpx;
}

.question-container .question-list .question-line-bottom .right-answer-btn {
    color: #2f8cef;
}

.question-container .question-list .question-line-bottom .right-answer-btn text {
    margin-left: 8rpx;
}