page {
    padding-bottom: 0;
}

.map-look {
    height: 100vh;
    box-sizing: border-box;
    overflow: hidden;
}

.line-filter {
    width: 100%;
    min-height: 100rpx;
    background: #fff;
    position: relative;
    z-index: 99;
}

.line-scroll {
    height: 100rpx;
    padding: 16rpx 32rpx;
    white-space: nowrap;
    font-size: 0;
    box-sizing: border-box;
    z-index: 10;
    border-bottom: 1rpx rgba(0,0,0,.07);
}

.line-scroll .line {
    display: inline-block;
    margin-left: 12rpx;
    width: 128rpx;
    height: 68rpx;
    line-height: 68rpx;
    text-align: center;
    font-size: 24rpx;
    border-radius: 4rpx;
    background: #f5f5f5;
    color: rgba(0,0,0,.85);
    font-family: PingFangSC-Medium,PingFang SC;
}

.line-scroll .line[data-active="true"] {
    color: #fff;
    background: #2d8cf0;
    font-weight: 700;
}

.line-scroll .line:first-child {
    margin-left: 0;
}

.station-scroll {
    height: 84rpx;
    padding: 16rpx 32rpx;
    font-size: 0;
    position: absolute;
    width: 100%;
    top: 0;
    left: 0;
    transform: translateY(-100%);
    background: transparent;
    box-sizing: border-box;
    z-index: 9;
    white-space: nowrap;
    transition: all .2s ease-in;
}

.station-scroll.show {
    transform: translateY(100rpx);
    background: #fff;
}

.station-scroll .station {
    display: inline-block;
    padding: 0 16rpx;
    height: 52rpx;
    line-height: 52rpx;
    border-radius: 4rpx;
    background: #f7f7f7;
    font-size: 24rpx;
    color: rgba(0,0,0,.85);
    margin-left: 8rpx;
}

.station-scroll .station>text {
    display: inline-block;
}

.station-scroll .station:first-child {
    margin-left: 0;
}

.station-scroll .iconnew {
    font-size: 24rpx;
    color: #d8d8d8;
    margin-left: 8rpx;
}

map {
    position: relative;
    top: 0rpx;
    width: 100%;
    height: calc(100vh - 100rpx);
}

.subway-guide {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 999;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,.6);
}

.subway-guide image {
    width: 592rpx;
    height: 524rpx;
}