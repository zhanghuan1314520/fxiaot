.info-container {
    display: flex;
    justify-content: space-between;
    font-family: PingFangSC-Medium,PingFang SC;
    position: relative;
    padding: 22rpx 36rpx 26rpx;
    border-top: 1rpx solid rgba(0,0,0,.07);
    background: #f7f7f7;
    border-bottom-left-radius: 16rpx;
    border-bottom-right-radius: 16rpx;
}

.info-wrap {
    display: flex;
    background: none;
}

.info-avatar {
    position: relative;
    width: 80rpx;
    height: 80rpx;
    box-sizing: border-box;
    border: 1rpx solid #eee;
    border-radius: 50%;
}

.info-avatar .avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.info-content {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.info-name {
    position: relative;
    line-height: 40rpx;
    width: 240rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    word-break: break-all;
}

.info-name__text {
    font-size: 30rpx;
    line-height: 40rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
}

.info-level {
    width: 103rpx;
    height: 35rpx;
}

.icons,.phone-cont {
    display: flex;
    align-items: center;
}

.phone-cont {
    justify-content: center;
    flex-direction: row;
    width: 80rpx;
    height: 80rpx;
    background: rgba(45,140,240,.08);
    border-radius: 40rpx;
    margin-left: 32rpx;
    color: #2f8cef;
    flex-shrink: 0;
}

.phone-cont .new-fabuwenda {
    position: relative;
    top: 4rpx;
    left: 8rpx;
}

.phone-cont .iconnew {
    font-size: 42rpx;
}