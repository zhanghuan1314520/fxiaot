.btn-cancel {
    color: #606266;
}

.fz-20 {
    font-size: 40rpx!important;
    float: left;
}

.mr-4 {
    margin-right: 4rpx;
    margin-top: 0rpx;
}

.mark {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    width: 100%;
    background: rgba(0,0,0,.65);
    z-index: 1005;
}

.dialog {
    height: auto;
    overflow: hidden;
    width: 600rpx;
    background: #fff;
    border-radius: 8rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%,-50%);
}

.dialog .dialog-title {
    width: auto;
    height: 44rpx;
    font-size: 40rpx;
    font-weight: 600;
    color: #303237;
    line-height: 44rpx;
    margin: 34rpx 40rpx 24rpx;
}

.dialog .dialog-content {
    width: auto;
    height: 426rpx;
    overflow: hidden;
    background: #f5f7fa;
    border-radius: 8rpx;
    margin: 0 40rpx;
}

.dialog .dialog-content .textarea {
    width: auto;
    resize: none;
    overflow-y: hidden;
    padding: 20rpx;
    height: 315rpx;
    font-size: 28rpx;
    line-height: 44rpx;
}

.dialog .word-count {
    width: auto;
    height: 80rpx;
    line-height: 80rpx;
    color: #96989e;
    font-size: 28rpx;
    text-align: right;
    margin-right: 20rpx;
}

.btn-save {
    width: 100%!important;
    text-align: center;
}

.set-default {
    height: 40rpx;
    width: auto;
    font-size: 24rpx;
    font-weight: 400;
    color: #96989e;
    line-height: 40rpx;
    margin-top: 28rpx;
    margin-bottom: 36rpx;
    margin-left: 40rpx;
    display: flex;
}

.set-default .reply-auto {
    flex: 1;
}

.set-default .reply-time {
    flex: 1;
    text-align: right;
    margin-right: 40rpx;
}

.set-default .reply-time .time-val {
    display: inline-block;
    width: 70rpx;
    margin: 0 18rpx;
    font-size: 28rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    text-align: center;
}

.set-default .reply-time .image {
    vertical-align: middle;
    margin-top: -10rpx;
    height: 34rpx!important;
    width: 34rpx!important;
}

.btns {
    border-top: 1px solid rgba(0,0,0,.1);
    height: 100rpx;
    width: auto;
}

.btns .button {
    width: 298rpx;
    height: 100rpx;
    line-height: 100rpx;
    display: inline-block;
    background: transparent;
    border-radius: 0;
    border-right: 1rpx solid #e2e4ea;
    font-size: 32rpx;
}

.btns .button:last-child {
    border: 0;
    color: #2f8cef;
}