.first-search-page {
    height: calc(100vh - 128rpx);
}

.search__banner {
    width: 100%;
    padding: 8rpx 32rpx 34rpx;
    box-sizing: border-box;
}

.search__banner__swiper {
    width: 100%;
    height: 138rpx;
    border-radius: 8rpx;
    background: #fff;
    overflow: hidden;
}

.search__banner__item {
    position: relative;
    width: 100%;
    height: 100%;
}

.search__banner__item .advert {
    font-size: 18rpx;
    line-height: 26rpx;
    text-align: center;
    background: rgba(0,0,0,.3);
    width: 50rpx;
    height: 26rpx;
    position: absolute;
    right: 20rpx;
    bottom: 15rpx;
    z-index: 222;
    border-radius: 1rpx;
    opacity: .4;
}

.search__banner__item-img {
    display: block;
    width: 100%;
    height: 100%;
}

.search__history {
    width: 100%;
    padding: 0 32rpx;
    margin-bottom: 16rpx;
    box-sizing: border-box;
}

.search__history-title {
    display: flex;
    justify-content: center;
    align-items: center;
    justify-content: space-between;
    line-height: 36rpx;
    height: 36rpx;
}

.search__history-title-text {
    font-weight: 500;
    color: rgba(0,0,0,.85);
}

.search__history-title-clear {
    color: rgba(0,0,0,.25);
    transform: translateY(-2rpx);
}

.search__history-content {
    padding-top: 24rpx;
    overflow: hidden;
}

.search__history-content.group__container {
    display: flex;
}

.search__history-content.skeletons-rect {
    background: transparent!important;
}

.search__history__group {
    flex: 1;
    height: 62rpx;
    transition: height .3s;
    overflow: hidden;
}

.search__history__group.search__history__group-show {
    height: auto!important;
}

.search__history__more {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 44rpx;
    height: 44rpx;
    margin: 2rpx 0;
    border-radius: 44rpx;
    background: rgba(48,55,64,.05);
    color: rgba(0,0,0,.25);
    transition: transform .3s;
    transition: transform .3s,-webkit-transform .3s;
    transform: rotate(0);
}

.search__history__more.search__history__more-active {
    transform: rotate(180deg);
}

.search__history__item {
    float: left;
    display: flex;
    height: 48rpx;
    padding: 0 20rpx;
    margin: 0 16rpx 16rpx 0;
    background: rgba(48,55,64,.05);
    border-radius: 8rpx;
}

.search__history__item-text {
    float: left;
    line-height: 48rpx;
    height: 48rpx;
    font-weight: 400;
    color: rgba(0,0,0,.65);
}

.search__history__item-text.sk-width {
    width: 140rpx;
}

.search__history__item-hot {
    background: rgba(240,69,35,.1);
}

.search__history__item-hot .search__history__item-text {
    color: #f04523!important;
}

.search__history__item-icon {
    float: left;
    display: block;
    width: 30rpx;
    height: 30rpx;
    font-size: 30rpx;
    margin: 10rpx 6rpx 0 0;
    color: #f04523;
}

.search__hotlist {
    display: -webkit-box;
    width: 100%;
    height: 960rpx;
    padding: 16rpx 32rpx 76rpx;
    box-sizing: border-box;
    overflow-x: scroll;
    -webkit-overflow-scrolling: touch;
}

.search__hotlist .search__hotlist-item {
    margin-right: 24rpx;
}

.search__hotlist .search__hotlist-empty {
    width: 12rpx;
    height: 100%;
}

.search__hotlist.search__hotlist::-webkit-scrollbar {
    display: none;
}