.result .result__search {
    position: fixed;
    z-index: 2;
    left: 0;
    top: 0;
    width: 100%;
    background: #fff;
    overflow: hidden;
}

.result .result__filters {
    position: fixed;
    z-index: 2;
    top: 128rpx;
    left: 0;
    width: 100%;
}

.result .result__filters .result__filters-container {
    position: relative;
    z-index: 2;
}

.result .result__filters .result__filters-bg {
    position: fixed;
    z-index: 1;
    width: 100%;
    height: calc(100vh - 128rpx);
    background: rgba(0,0,0,.2);
    opacity: 0;
    transform: translateY(-1000%);
    transition: opacity .3s;
}

.result .result__filters .result__filters-bg.result__filters-bg-active {
    opacity: 1;
    transform: translateY(0);
}

.result .result__container {
    position: relative;
    z-index: 1;
    width: 100%;
    padding: 216rpx 32rpx 0;
    box-sizing: border-box;
    overflow: hidden;
}

.result .result__project__list {
    padding-top: 40rpx;
}

.result .result__porject__list-empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx 0 24rpx;
    background: #fff;
    width: 100%;
}

.result .result__empty__tip {
    font-size: 30rpx;
    font-weight: 400;
    color: rgba(0,0,0,.45);
    line-height: 40rpx;
    margin-bottom: 24rpx;
}

.result .result__empty__add {
    width: 152rpx;
    height: 56rpx;
    line-height: 56rpx;
    border-radius: 8rpx;
    font-weight: 400;
    font-size: 26rpx;
    color: #2d8cf0;
    border: 2rpx solid #2d8cf0;
    box-sizing: border-box;
    text-align: center;
}

.result .result__recommend__container {
    width: 100%;
    overflow: hidden;
}

.result .result__recommend__title {
    font-size: 40rpx;
    font-weight: 500;
    color: rgba(0,0,0,.85);
    line-height: 52rpx;
    margin-bottom: 40rpx;
}

.result .result__search-text {
    font-size: 28rpx;
    margin-left: 12rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    font-weight: 500;
    max-width: 404rpx;
    color: rgba(0,0,0,.85);
}