.swiper-slide {
    height: 8rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: absolute;
    top: 386rpx;
    left: 0;
    right: 0;
    z-index: 1;
}

.slide {
    transition: width .3s;
    width: 34rpx;
    height: 8rpx;
    background: #ccc;
    border-radius: 4rpx;
    opacity: .5;
    margin-right: 8rpx;
}

.slide-active {
    width: 12rpx;
    background: #2d8cf0;
    opacity: 1;
}

.page {
    min-height: 100vh;
    background: url(https://imgcdn.huanjutang.com/image/2020/06/16/39124accc393301dd80027a6e9183b4c.png) top no-repeat #fff;
    background-size: contain;
}

.empty {
    width: 100%;
    height: 32rpx;
}

.search-box {
    width: auto;
    height: 76rpx;
    background: hsla(0,0%,96.1%,.2);
    border-radius: 38rpx;
    border: 1px solid hsla(0,0%,100%,.4);
    margin: 0 32rpx;
    color: #fff;
    font-size: 28rpx;
}

.search-box .icon-search {
    height: 32rpx;
    width: 32rpx;
    float: left;
    margin-left: 34rpx;
    margin-right: 18rpx;
    margin-top: 22rpx;
}

.search-box .input {
    height: 76rpx;
    width: 560rpx;
    line-height: 76rpx;
    display: inline-block;
}

.nav-box {
    width: auto;
    height: 424rpx;
    background: #fff;
    box-shadow: 0 4rpx 24rpx 0 hsla(0,0%,87.1%,.5);
    border-radius: 16rpx;
    margin: 46rpx 32rpx 48rpx;
    position: relative;
}

.nav-box .swiper {
    width: 100%;
    height: 100%;
}

.nav-box .nav-item {
    float: left;
    height: 130rpx;
    overflow: hidden;
    width: 25%;
    padding-top: 48rpx;
    text-align: center;
}

.nav-box .nav-item .nav-icon {
    width: 80rpx;
    height: 80rpx;
}

.nav-box .nav-item .nav-txt {
    width: auto;
    margin: 16rpx 10rpx 0;
    height: 34rpx;
    font-size: 24rpx;
    font-weight: 400;
    color: rgba(0,0,0,.85);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.h-234 {
    height: 226rpx!important;
}

.ad {
    width: auto;
    height: 206rpx;
    margin: 0 32rpx 64rpx;
}

.ad .ad-img {
    width: 100%;
    height: 100%;
}

.title {
    width: auto;
    height: 44rpx;
    font-size: 44rpx;
    font-weight: 700;
    color: rgba(0,0,0,.85);
    line-height: 44rpx;
    margin: 0 32rpx 8rpx;
}